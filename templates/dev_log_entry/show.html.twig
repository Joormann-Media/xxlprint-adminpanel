{% extends 'base.html.twig' %}

{% block title %}DevLog Entry #{{ dev_log_entry.id }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="mb-4">
        <a href="{{ path('app_dev_log_entry_index') }}" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Zurück zur Übersicht
        </a>
    </div>
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h2 class="mb-0 fs-4 d-flex align-items-center gap-2">
                <i class="bi bi-journal-code"></i>
                DevLogEntry #{{ dev_log_entry.id }}
            </h2>
            <div>
                <a href="{{ path('app_dev_log_entry_edit', {'id': dev_log_entry.id}) }}"
                   class="btn btn-warning btn-sm me-2">
                    <i class="bi bi-pencil"></i> Bearbeiten
                </a>
                {{ include('dev_log_entry/_delete_form.html.twig', {'button_class': 'btn btn-danger btn-sm'}) }}
            </div>
        </div>
        <div class="card-body py-4 px-4">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Titel</dt>
                <dd class="col-sm-9">{{ dev_log_entry.title }}</dd>

                <dt class="col-sm-3 text-muted">Inhalt</dt>
                <dd class="col-sm-9">
                    <div class="bg-light rounded px-3 py-2 border" style="white-space: pre-wrap;">{{ dev_log_entry.content }}</div>
                </dd>

                <dt class="col-sm-3 text-muted">Autor</dt>
                <dd class="col-sm-9">
                    {{ dev_log_entry.user ? dev_log_entry.user.fullname : '—' }}
                </dd>

                <dt class="col-sm-3 text-muted">Erstellt</dt>
                <dd class="col-sm-9">
                    {{ dev_log_entry.createdAt ? dev_log_entry.createdAt|date('d.m.Y H:i:s') : '—' }}
                </dd>

                <dt class="col-sm-3 text-muted">Geändert</dt>
                <dd class="col-sm-9">
                    {{ dev_log_entry.updatedAt ? dev_log_entry.updatedAt|date('d.m.Y H:i:s') : '—' }}
                </dd>
            </dl>
        </div>
    </div>
</div>
{% endblock %}
