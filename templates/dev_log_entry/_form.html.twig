{# templates/dev_log_entry/_form.html.twig #}

{{ form_start(form, {'attr': {'class': 'row g-4'}}) }}

    <div class="col-12">
        <div class="card shadow-sm rounded-4 border-0">
            <div class="card-header bg-primary text-white d-flex align-items-center rounded-top-4">
                <i class="bi bi-terminal fs-4 me-2"></i>
                <h5 class="mb-0 flex-grow-1">✏️ DevLog-Eintrag bearbeiten</h5>
            </div>
            <div class="card-body">
                {% if form_errors(form) %}
                    <div class="alert alert-danger mb-4">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <div class="row g-3">
                    <div class="col-md-6">
                        {{ form_label(form.title, null, {'label_attr': {'class': 'fw-bold'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Kurzer Titel, z.B. „Cache-Bug gefixt“'}}) }}
                        {{ form_errors(form.title) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.user, null, {'label_attr': {'class': 'fw-bold'}}) }}
                        {{ form_widget(form.user, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.user) }}
                    </div>
                    <div class="col-12">
                        {{ form_label(form.content, null, {'label_attr': {'class': 'fw-bold'}}) }}
                        {{ form_widget(form.content, {'attr': {'placeholder': 'Was wurde geändert, gefixt, verbessert…?'}}) }}
                        {{ form_errors(form.content) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.createdAt, null, {'label_attr': {'class': 'fw-bold'}}) }}
                        {{ form_widget(form.createdAt, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.createdAt) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.updatedAt, null, {'label_attr': {'class': 'fw-bold'}}) }}
                        {{ form_widget(form.updatedAt, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.updatedAt) }}
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light rounded-bottom-4 d-flex justify-content-between">
                <a href="{{ path('app_dev_log_entry_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Zurück
                </a>
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-save"></i> Speichern
                </button>
            </div>
        </div>
    </div>

{{ form_end(form) }}
