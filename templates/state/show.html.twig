{% extends 'base.html.twig' %}

{% block title %}State{% endblock %}

{% block body %}
    <h1>State</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ state.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ state.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ state.name }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ state.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ state.longitude }}</td>
            </tr>
            <tr>
                <th>Polygon</th>
                <td>{{ state.polygon ? state.polygon|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_state_index') }}">back to list</a>

    <a href="{{ path('app_state_edit', {'id': state.id}) }}">edit</a>

    {{ include('state/_delete_form.html.twig') }}
{% endblock %}
