{% extends 'base.html.twig' %}


{% block body %}
<div class="container mt-4">

    <div class="bg-light border rounded p-4 mb-4 shadow-sm">
        <h2 class="mb-0">ðŸŒ´ Urlaubsverwaltung</h2>
