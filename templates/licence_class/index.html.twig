{% extends 'base.html.twig' %}

{% block title %}Führerscheinklassen Übersicht{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .card-action-btn {
            border: none;
            background: none;
            color: #0d6efd;
            font-size: 1.3rem;
            padding: 0;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h2 class="mb-0">Führerscheinklassen</h2>
        <a href="{{ path('app_licence_class_new') }}" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Neue Klasse anlegen
        </a>
    </div>
    <div class="row g-4">
        {% for licence_class in licence_classes %}
            <div class="col-12 col-md-6 col-xl-4">
                <div class="card shadow rounded-4 border-0 h-100">
                    <div class="card-body pb-2">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <h5 class="card-title mb-1">
                                    <span class="badge bg-primary me-2">{{ licence_class.shortName }}</span>
                                    {{ licence_class.description }}
                                </h5>
                                <div class="text-muted small mb-2">
                                    {{ licence_class.infoBox|default('-') }}
                                </div>
                            </div>
                            <button class="card-action-btn"
        type="button"
        data-bs-target="#includes-{{ licence_class.id }}"
        aria-controls="includes-{{ licence_class.id }}">
    <i class="bi bi-eye"></i>
</button>

                        </div>
                        <div class="collapse mt-3"
                             id="includes-{{ licence_class.id }}">
                            <strong>Enthält Klassen:</strong>
                            {% if licence_class.includes|length > 0 %}
                                <ul class="mb-0 ps-3">
                                    {% for inc in licence_class.includes %}
                                        <li>
                                            <span class="badge bg-secondary me-1">{{ inc.shortName }}</span>
                                            {{ inc.description }}
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <div class="text-muted">Keine weiteren Klassen enthalten.</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex gap-2 justify-content-end">
                        <a href="{{ path('app_licence_class_show', {'id': licence_class.id}) }}" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-eye"></i> Anzeigen
                        </a>
                        <a href="{{ path('app_licence_class_edit', {'id': licence_class.id}) }}" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-pencil"></i> Bearbeiten
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning text-center rounded-4">
                    Keine Führerscheinklassen gefunden.
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<!-- Bootstrap Bundle mit Popper (für Collapse) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.card-action-btn').forEach(function(btn) {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            const targetSelector = btn.getAttribute('data-bs-target');
            const collapseEl = document.querySelector(targetSelector);
            // Manuelles toggling
            let bsCollapse = bootstrap.Collapse.getOrCreateInstance(collapseEl);
            if (collapseEl.classList.contains('show')) {
                bsCollapse.hide();
            } else {
                bsCollapse.show();
            }
        });
    });
});
</script>

{% endblock %}
