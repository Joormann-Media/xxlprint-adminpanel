{# templates/ride/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ride Details{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Ride Details</h4>
                </div>
                <div class="card-body">

                    <dl class="row">
                        <dt class="col-sm-4">Ride ID</dt>
                        <dd class="col-sm-8">{{ ride.rideId }}</dd>

                        <dt class="col-sm-4">Client</dt>
                        <dd class="col-sm-8">{{ ride.client ? ride.client.name : '—' }}</dd>

                        <dt class="col-sm-4">Ride Variation</dt>
                        <dd class="col-sm-8">{{ ride.rideVariation ? ride.rideVariation.name : '—' }}</dd>

                        <dt class="col-sm-4">Start Address</dt>
                        <dd class="col-sm-8">
                            {{ ride.startStreet }} {{ ride.startStreetNo }}<br>
                            {{ ride.startZip }} {{ ride.startCity }}<br>
                            {{ ride.startCountry }}
                        </dd>

                        <dt class="col-sm-4">Destination Address</dt>
                        <dd class="col-sm-8">
                            {{ ride.destStreet }} {{ ride.destStreetNo }}<br>
                            {{ ride.destZip }} {{ ride.destCity }}<br>
                            {{ ride.destCountry }}
                        </dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">{{ ride.rideDescription }}</dd>

                        <dt class="col-sm-4">Start</dt>
                        <dd class="col-sm-8">{{ ride.rideDateStart ? ride.rideDateStart|date('d.m.Y H:i') : '—' }}</dd>

                        <dt class="col-sm-4">End</dt>
                        <dd class="col-sm-8">{{ ride.rideDateEnd ? ride.rideDateEnd|date('d.m.Y H:i') : '—' }}</dd>

                        <dt class="col-sm-4">Time</dt>
                        <dd class="col-sm-8">{{ ride.rideTime ? ride.rideTime|date('H:i') : '—' }}</dd>

                        <dt class="col-sm-4">Length</dt>
                        <dd class="col-sm-8">{{ ride.rideLength }}</dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <a href="{{ path('app_ride_edit', {'id': ride.id}) }}" class="btn btn-warning">✏️ Edit</a>
                    <a href="{{ path('app_ride_index') }}" class="btn btn-secondary ms-2">⬅️ Back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
