{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .sortable-card {
            cursor: grab;
            transition: box-shadow 0.2s;
        }
        .sortable-card:active {
            cursor: grabbing;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container my-5">

    {# Flash-Messages oben anzeigen (klassische Symfony-Alerts) #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show mt-2" role="alert">
                {{ message|raw }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="SchlieÃŸen"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="bg-light border rounded p-4 mb-4 shadow-sm">
        <h1 class="mb-3">ðŸšŒ Verkehrsarten</h1>
        <p class="text-muted">Verwalte hier alle Verkehrsarten und ihre Sortierreihenfolge (per Drag & Drop).</p>
    </div>
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <a href="{{ path('app_traffic_type_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Neue Verkehrsart
        </a>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" id="trafficTypeSearch" class="form-control" placeholder="ðŸ” Suche Verkehrsarten...">
        </div>
    </div>
    <div class="row g-4 sortable-container" id="sortableTrafficTypes">
        {% for t in traffic_types %}
            <div class="col-md-6 col-lg-4 traffic-type-card" data-id="{{ t.id }}">
                <div class="card h-100 shadow-sm sortable-card">
                    <div class="card-body">
                        <h5 class="card-title mb-1">{{ t.name }}</h5>
                        <div class="mb-2">
                            {% if t.category == 'bus' %}
                                <span class="badge bg-info text-dark">Bus</span>
                            {% elseif t.category == 'truck' %}
                                <span class="badge bg-warning text-dark">LKW</span>
                            {% else %}
                                <span class="badge bg-secondary">Beides</span>
                            {% endif %}
                        </div>
                        <div class="mb-2">
                            <span class="badge bg-light text-dark">{{ t.regulation }}</span>
                        </div>
                        <div class="mb-2">
                            <small>{{ t.description|u.truncate(160, 'â€¦', false) }}</small>
                        </div>
                        {% if t.specialNotes %}
                            <div class="alert alert-info py-1 px-2 small mb-0">{{ t.specialNotes }}</div>
                        {% endif %}
                    </div>
                    <div class="card-footer bg-transparent border-top-0 d-flex justify-content-end gap-2">
                        <a href="{{ path('app_traffic_type_show', {'id': t.id}) }}" class="btn btn-outline-info btn-sm" title="Anzeigen">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="{{ path('app_traffic_type_edit', {'id': t.id}) }}" class="btn btn-outline-primary btn-sm" title="Bearbeiten">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    ðŸš« Keine Verkehrsarten gefunden.
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{# Bootstrap Toast fÃ¼r Live-Feedback (nach Sortierung, AJAX etc.) #}
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999">
    <div id="liveToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true" style="min-width:240px;">
        <div class="d-flex">
            <div class="toast-body" id="liveToastMsg"></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="SchlieÃŸen"></button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const container = document.getElementById('sortableTrafficTypes');

            // --- Suche ---
            const searchInput = document.getElementById('trafficTypeSearch');
            if (searchInput && container) {
                searchInput.addEventListener('input', function() {
                    const value = this.value.toLowerCase();
                    container.querySelectorAll(".traffic-type-card").forEach(card => {
                        card.style.display = card.innerText.toLowerCase().includes(value) ? '' : 'none';
                    });
                });
            }

            // --- Drag & Drop ---
            if (container) {
                new Sortable(container, {
                    animation: 150,
                    handle: '.sortable-card',
                    draggable: '.col-md-6, .col-lg-4',
                    onEnd: function () {
                        const sortedIds = [...container.querySelectorAll('[data-id]')].map(el => el.dataset.id);

                        fetch('{{ path("app_traffic_type_sort") }}', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            },
                            body: JSON.stringify({ ids: sortedIds })
                        })
                        .then(response => response.text())
                        .then(text => {
                            try {
                                const json = JSON.parse(text);
                                if (json.status === 'ok') {
                                    showLiveToast(json.message || 'Reihenfolge gespeichert!');
                                } else {
                                    showLiveToast(json.error || 'Fehler beim Speichern!', 'danger');
                                }
                            } catch (e) {
                                console.error('Antwort war kein JSON:', text);
                                showLiveToast('Fehler beim Speichern: UngÃ¼ltige Serverantwort.', 'danger');
                            }
                        });
                    }
                });
            }

            // --- Live Toast ---
            window.showLiveToast = function(msg, type = 'success') {
                const toastEl = document.getElementById('liveToast');
                const toastMsg = document.getElementById('liveToastMsg');
                toastMsg.textContent = msg;
                // Setze Toast-Color (Bootstrap 5: success, danger, warning, info ...)
                toastEl.className = 'toast align-items-center text-bg-' + type + ' border-0';
                const toast = new bootstrap.Toast(toastEl);
                toast.show();
            }
        });
    </script>
{% endblock %}
