    <div class="mb-3">
        {{ form_label(form.description, null, {label_attr: {class: 'form-label fw-bold'}}) }}
        {{ form_widget(form.description, {attr: {class: 'form-control', rows: 3, placeholder: 'Beschreibung der Verkehrsart'}}) }}
        {{ form_errors(form.description) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.regulation, null, {label_attr: {class: 'form-label fw-bold'}}) }}
        {{ form_widget(form.regulation, {attr: {class: 'form-control', placeholder: 'z.B. PBefG, GüKG, ...'}}) }}
        {{ form_errors(form.regulation) }}
