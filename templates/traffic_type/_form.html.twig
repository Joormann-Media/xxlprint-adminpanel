    <div class="mb-3">
        {{ form_label(form.category, null, {label_attr: {class: 'form-label fw-bold'}}) }}
        {{ form_widget(form.category, {attr: {class: 'form-select'}}) }}
        {{ form_errors(form.category) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.specialNotes, null, {label_attr: {class: 'form-label fw-bold'}}) }}
        {{ form_widget(form.specialNotes, {attr: {class: 'form-control', placeholder: 'Hinweise, Besonderheiten, etc.'}}) }}
        {{ form_errors(form.specialNotes) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.sortOrder, null, {label_attr: {class: 'form-label fw-bold'}}) }}
        {{ form_widget(form.sortOrder, {attr: {class: 'form-control', type: 'number', min: 0}}) }}
        {{ form_errors(form.sortOrder) }}
