{% extends 'base.html.twig' %}

{% block title %}School Departures{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h2 class="mb-0">School Departure List</h2>
        <a href="{{ path('app_school_departure_new') }}" class="btn btn-success">â• Add Departure</a>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" id="departureSearch" class="form-control" placeholder="ğŸ” Search...">
        </div>
    </div>
    <div class="row" id="departureCards">
        {% for departure in schoolDepartures %}
            <div class="col-12 col-md-6 col-lg-4 mb-4 departure-card-parent">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-body pb-2">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="card-title mb-0">
                                {{ departure.school.name }}
                                {% if departure.specialDeparture %}
                                    <span class="badge bg-info ms-2">Special</span>
                                {% endif %}
                            </h5>
                            <span class="badge bg-light text-dark border" style="font-size:0.9em;">{{ departure.weekday }}</span>
                        </div>
                        <ul class="list-unstyled mb-3">
                            <li><strong>Departure Time:</strong> {{ departure.departureTime ? departure.departureTime|date('H:i') : '-' }}</li>
                            <li><strong>Ready Time:</strong> {{ departure.readyTime ? departure.readyTime|date('H:i') : '-' }}</li>
                            <li><strong>Bus Line:</strong> {{ departure.busLine ?? '-' }}</li>
                            <li><strong>Notes:</strong> {{ departure.notes|u.truncate(60, 'â€¦') ?? '-' }}</li>
                        </ul>
                    </div>
                    <div class="card-footer bg-transparent d-flex justify-content-between align-items-center">
                        <div>
                            <a href="{{ path('app_school_departure_show', {'id': departure.id}) }}" class="btn btn-sm btn-primary me-1">Show</a>
                            <a href="{{ path('app_school_departure_edit', {'id': departure.id}) }}" class="btn btn-sm btn-warning me-1">Edit</a>
                        </div>
                        <form method="post" action="{{ path('app_school_departure_delete', {'id': departure.id}) }}" style="display:inline;" onsubmit="return confirm('Delete this departure?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ departure.id) }}">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center text-muted py-4">
                No departures found.
            </div>
        {% endfor %}
    </div>
</div>

<script>
// Card-basierte Suche
document.getElementById('departureSearch').addEventListener('input', function () {
    let value = this.value.toLowerCase();
    document.querySelectorAll('#departureCards .departure-card-parent').forEach(card => {
        card.style.display = card.textContent.toLowerCase().includes(value) ? '' : 'none';
    });
});
</script>
{% endblock %}
