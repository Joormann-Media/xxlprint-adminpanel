{% extends 'base.html.twig' %}

{% block title %}News index{% endblock %}

{% block body %}
    <h1>News index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>PublishAt</th>
                <th>ExpiresAt</th>
                <th>PopupOnLogin</th>
                <th>IsSticky</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td>{{ news.id }}</td>
                <td>{{ news.title }}</td>
                <td>{{ news.content }}</td>
                <td>{{ news.publishAt ? news.publishAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ news.expiresAt ? news.expiresAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ news.popupOnLogin ? 'Yes' : 'No' }}</td>
                <td>{{ news.isSticky ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_news_show', {'id': news.id}) }}">show</a>
                    <a href="{{ path('app_news_edit', {'id': news.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_news_new') }}">Create new</a>
{% endblock %}
