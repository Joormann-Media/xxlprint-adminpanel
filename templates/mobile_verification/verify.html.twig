{% extends 'base.html.twig' %}


{% block body %}
<div class="container py-4">
    <h2>�� Mobilnummer bestätigen</h2>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% if mobileVerified %}
        <div class="alert alert-success">
            ✅ Deine Mobilnummer ist bereits verifiziert.
        </div>
    {% endif %}

    <div class="row mt-4">
        <div class="col-md-6">
            <h5>1. Mobilnummer eingeben</h5>
            {{ form_start(mobileForm) }}
                {{ form_row(mobileForm.mobile) }}
                <button class="btn btn-primary">{{ mobileForm.send.vars.label }}</button>
            {{ form_end(mobileForm) }}
        </div>

        <div class="col-md-6">
            <h5>2. Code eingeben</h5>
            {{ form_start(codeForm) }}
                {{ form_row(codeForm.code) }}
                <button class="btn btn-success">{{ codeForm.verify.vars.label }}</button>
            {{ form_end(codeForm) }}
        </div>
    </div>
</div>
{% endblock %}
