{# templates/user_group/_form.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">üë• Benutzergruppe bearbeiten</h4>
        </div>
        <div class="card-body">
            {{ form_start(form) }}

            <ul class="nav nav-tabs mb-3" id="groupTabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" id="tab-info" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab">üìã Basisdaten</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="tab-members" data-bs-toggle="tab" data-bs-target="#members" type="button" role="tab">üë§ Mitglieder</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="tab-meta" data-bs-toggle="tab" data-bs-target="#meta" type="button" role="tab">‚öôÔ∏è Metadaten</button>
                </li>
            </ul>

            <div class="tab-content">
                {# TAB 1: BASISDATEN #}
                <div class="tab-pane fade show active" id="info" role="tabpanel">
                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            {{ form_label(form.GroupName) }}
                            {{ form_widget(form.GroupName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.groupLogo) }}
                            {{ form_widget(form.groupLogo, {'attr': {'class': 'form-control'}}) }}
                            {% if user_group is defined and user_group.groupLogo %}
                                <img src="{{ asset('user_groups/' ~ user_group.baseDir ~ '/avatar/' ~ user_group.groupLogo) }}"
                                    class="img-thumbnail mt-2"
                                    style="max-height:64px; max-width:64px;"
                                    alt="Gruppenlogo">
                            {% endif %}
                        </div>
                        <div class="col-12">
                            {{ form_label(form.GroupDescription) }}
                            {{ form_widget(form.GroupDescription, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                        </div>
                    </div>
                </div>

                {# TAB 2: MITGLIEDER #}
                <div class="tab-pane fade" id="members" role="tabpanel">
                    <div class="mt-3">
                        {{ form_label(form.groupMembers) }}
                        {{ form_widget(form.groupMembers, {'attr': {'class': 'form-select', 'multiple': 'multiple', 'style': 'min-height:120px'}}) }}
                    </div>
                </div>

                {# TAB 3: METADATEN #}
                <div class="tab-pane fade" id="meta" role="tabpanel">
                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            {{ form_label(form.groupCreate) }}
                            {{ form_widget(form.groupCreate, {
                                'attr': {
                                    'class': 'form-control',
                                    'readonly': 'readonly',
                                    'value': form.groupCreate.vars.value ? form.groupCreate.vars.value|date("Y-m-d H:i:s") : "now"|date("Y-m-d H:i:s")
                                }
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.groupCReateBy) }}
                            {{ form_widget(form.groupCReateBy, {
                                'attr': {
                                    'class': 'form-control',
                                    'readonly': 'readonly',
                                    'value': app.user ? app.user.username : ''
                                }
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.baseDir) }}
                            {{ form_widget(form.baseDir, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-end mt-4">
                <button class="btn btn-primary">üíæ Speichern</button>
                <a href="{{ path('app_user_groups_index') }}" class="btn btn-outline-secondary ms-2">‚¨ÖÔ∏è Zur√ºck</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<script>
    // Bootstrap Tab-Switch (Fallback f√ºr maximale Browserkompatibilit√§t)
    document.querySelectorAll('#groupTabs button').forEach(function(triggerEl) {
        triggerEl.addEventListener('click', function(event) {
            event.preventDefault();
            bootstrap.Tab.getOrCreateInstance(triggerEl).show();
        });
    });
</script>
{% endblock %}
