{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-person-vcard"></i> Fahrerprofil bearbeiten</h4>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'autocomplete': 'off'}}) }}

            <ul class="nav nav-tabs mb-3" id="driverManagerTabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" id="tab-licence" data-bs-toggle="tab" data-bs-target="#licence" type="button" role="tab">
                        <i class="bi bi-card-list"></i> Führerschein
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="tab-vehicle" data-bs-toggle="tab" data-bs-target="#vehicle" type="button" role="tab">
                        <i class="bi bi-truck"></i> Fahrzeug & User
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="tab-info" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab">
                        <i class="bi bi-info-circle"></i> Besonderes
                    </button>
                </li>
            </ul>

            <div class="tab-content">
                {# TAB 1: Führerschein #}
                <div class="tab-pane fade show active" id="licence" role="tabpanel">
                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            {{ form_label(form.licenceExpires, 'Ablaufdatum der Fahrerlaubnis') }}
                            {{ form_widget(form.licenceExpires, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.licenceClasses, 'Führerscheinklassen') }}
                            {{ form_widget(form.licenceClasses, {'attr': {'class': 'form-select', 'multiple': 'multiple', 'size': 6}}) }}
                        </div>
                    </div>
                </div>

                {# TAB 2: Fahrzeug & User #}
                <div class="tab-pane fade" id="vehicle" role="tabpanel">
                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            {{ form_label(form.knownVehicle, 'Standardfahrzeug') }}
                            {{ form_widget(form.knownVehicle, {'attr': {'class': 'form-select'}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.user, 'Zugewiesener User') }}
                            {{ form_widget(form.user, {'attr': {'class': 'form-select'}}) }}
                        </div>
                    </div>
                </div>

                {# TAB 3: Besonderes #}
                <div class="tab-pane fade" id="info" role="tabpanel">
                    <div class="row g-3 mt-2">
                        <div class="col-12">
                            {{ form_label(form.specialDriverInfo, 'Besondere Hinweise zum Fahrer') }}
                            {{ form_widget(form.specialDriverInfo, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'z.B. Einschränkungen, Zusatzqualifikationen, etc.'}}) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-end mt-4">
                <button class="btn btn-primary">
                    <i class="bi bi-save"></i> Speichern
                </button>
                <a href="{{ path('app_driver_manager_index') }}" class="btn btn-outline-secondary ms-2">
                    <i class="bi bi-arrow-left"></i> Zurück
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

<script>
    // Tab-Support für Bootstrap (Fallback für ältere Browser)
    document.querySelectorAll('#driverManagerTabs button').forEach(function(triggerEl) {
        triggerEl.addEventListener('click', function(event) {
            event.preventDefault();
            bootstrap.Tab.getOrCreateInstance(triggerEl).show();
        });
    });
</script>
{% endblock %}
