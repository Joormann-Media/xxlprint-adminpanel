{# templates/holiday/import.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Feiertage/Ferien importieren{% endblock %}

{% block body %}
<div class="container my-4">
    <h1>ðŸ“¥ Feiertage / Schulferien importieren</h1>
    <form method="post" action="{{ path('app_holiday_import') }}" class="row g-3">
    {{ csrf_token('holiday_import')|raw }}
    <div class="col-md-3">
        <label class="form-label">Bundesland</label>
        <select name="state" class="form-select" required>
            {% for s in states %}
            <option value="{{ s }}" {{ s == 'NW' ? 'selected' : '' }}>{{ s }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="col-md-2">
        <label class="form-label">Jahr</label>
        <input type="number" name="year" class="form-control" value="{{ defaultYear }}" required>
    </div>
    <div class="col-md-3">
        <label class="form-label">Typ</label>
        <select name="type" class="form-select">
            <option value="holiday">Feiertage</option>
            <option value="vacation">Schulferien</option>
        </select>
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Importieren</button>
    </div>
</form>

</div>
{% endblock %}
