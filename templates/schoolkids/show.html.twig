{# templates/schoolkids/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Schoolkid Details{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Schoolkid Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">{{ schoolkid.lastName }}</dd>

                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">{{ schoolkid.firstName }}</dd>

                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">{{ schoolkid.dateOfBirth ? schoolkid.dateOfBirth|date('d.m.Y') : '—' }}</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">
                            {{ schoolkid.street }} {{ schoolkid.streetNumber }}, {{ schoolkid.zip }} {{ schoolkid.city }}
                        </dd>

                        <dt class="col-sm-4">District</dt>
                        <dd class="col-sm-8">{{ schoolkid.district|default('—') }}</dd>

                        <dt class="col-sm-4">Assigned Contact Person</dt>
                        <dd class="col-sm-8">{{ schoolkid.contactPerson ? schoolkid.contactPerson.fullName : '—' }}</dd>

                        <dt class="col-sm-4">Contact Person (Text)</dt>
                        <dd class="col-sm-8">{{ schoolkid.contactPersonName|default('—') }}</dd>

                        <dt class="col-sm-4">Contact Email</dt>
                        <dd class="col-sm-8">{{ schoolkid.contactEmail|default('—') }}</dd>

                        <dt class="col-sm-4">Kid Phone</dt>
                        <dd class="col-sm-8">{{ schoolkid.kidPhone|default('—') }}</dd>

                        <dt class="col-sm-4">Contact Phone</dt>
                        <dd class="col-sm-8">{{ schoolkid.contactPersonPhone|default('—') }}</dd>

                        <dt class="col-sm-4">Needs Aid</dt>
                        <dd class="col-sm-8">{{ schoolkid.needsAid ? '✔️ Yes' : '❌ No' }}</dd>

                        <dt class="col-sm-4">Aid Type</dt>
                        <dd class="col-sm-8">{{ schoolkid.aidType|default('—') }}</dd>

                        <dt class="col-sm-4">Has Companion</dt>
                        <dd class="col-sm-8">{{ schoolkid.hasCompanion ? '✔️ Yes' : '❌ No' }}</dd>

                        <dt class="col-sm-4">Companion Name</dt>
                        <dd class="col-sm-8">{{ schoolkid.companionName|default('—') }}</dd>

                        <dt class="col-sm-4">Required Seats</dt>
                        <dd class="col-sm-8">{{ schoolkid.requiredSeats|default('—') }}</dd>

                        <dt class="col-sm-4">Location</dt>
                        <dd class="col-sm-8">
                            {% if schoolkid.latitude and schoolkid.longitude %}
                                {{ schoolkid.latitude }}, {{ schoolkid.longitude }}
                            {% else %}
                                —
                            {% endif %}
                        </dd>

                        <dt class="col-sm-4">Active</dt>
                        <dd class="col-sm-8">{{ schoolkid.active ? '✔️ Yes' : '❌ No' }}</dd>

                        <dt class="col-sm-4">Special Information</dt>
                        <dd class="col-sm-8">
                            {{ schoolkid.specialInfos|default('—') }}
                        </dd>

                        <dt class="col-sm-4">School</dt>
                        <dd class="col-sm-8">{{ schoolkid.school ? schoolkid.school.name : '—' }}</dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <a href="{{ path('app_schoolkids_edit', {'id': schoolkid.id}) }}" class="btn btn-warning">✏️ Bearbeiten</a>
                    <a href="{{ path('app_schoolkids_index') }}" class="btn btn-secondary ms-2">⬅️ Zurück</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
