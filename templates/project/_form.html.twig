{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-4">
    <div class="bg-light border rounded p-4 mb-4 shadow-sm">
        <h2 class="mb-0">üìÅ Projektverwaltung</h2>
        <p class="text-muted">{{ page_title ?? 'Projekt anlegen/bearbeiten' }}</p>
    </div>

    {{ form_start(form) }}

    <div class="text-end mb-3">
        <a href="{{ back_link ?? path('app_project_index') }}" class="btn btn-warning">
            <i class="bi bi-arrow-left"></i> Zur√ºck
        </a>
        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle"></i> Speichern
        </button>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">üìÑ Allgemeine Informationen</div>
        <div class="card-body row g-3">
            <div class="col-md-6">
                {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger small">{{ form_errors(form.name) }}</div>
            </div>

            <div class="col-md-6">
                {{ form_label(form.projectDate, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.projectDate, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger small">{{ form_errors(form.projectDate) }}</div>
            </div>

            <div class="col-md-6">
                {{ form_label(form.projectStatus, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.projectStatus, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger small">{{ form_errors(form.projectStatus) }}</div>
            </div>

            <div class="col-md-6">
                {{ form_label(form.projectVersion, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.projectVersion, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger small">{{ form_errors(form.projectVersion) }}</div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-secondary text-white">üìù Beschreibung</div>
        <div class="card-body">
            {{ form_label(form.shortDescription, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.shortDescription, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger small">{{ form_errors(form.shortDescription) }}</div>

            <hr class="my-3">

            {{ form_label(form.longDescription, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.longDescription, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
            <div class="text-danger small">{{ form_errors(form.longDescription) }}</div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white">üë• Betreuer</div>
        <div class="card-body">
            {{ form_label(form.supervisors, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.supervisors, {'attr': {'class': 'form-select', 'multiple': true}}) }}
            <div class="text-danger small">{{ form_errors(form.supervisors) }}</div>
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
{% endblock %}
