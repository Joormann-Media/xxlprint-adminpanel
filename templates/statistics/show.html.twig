{% extends 'base.html.twig' %}

{% block title %}Statistics{% endblock %}

{% block body %}
    <h1>Statistics</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ statistic.id }}</td>
            </tr>
            <tr>
                <th>StatsDate</th>
                <td>{{ statistic.statsDate ? statistic.statsDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PanelStartet</th>
                <td>{{ statistic.panelStartet }}</td>
            </tr>
            <tr>
                <th>TotalFiles</th>
                <td>{{ statistic.totalFiles }}</td>
            </tr>
            <tr>
                <th>TotalFolders</th>
                <td>{{ statistic.totalFolders }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_statistics_index') }}">back to list</a>

