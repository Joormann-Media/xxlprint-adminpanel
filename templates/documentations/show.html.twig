{# templates/documentations/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dokumentation: {{ documentation.docuName }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="mb-4">
        <a href="{{ path('app_documentations_index') }}" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Zurück zur Übersicht
        </a>
        <a href="{{ path('app_documentations_edit', {'id': documentation.id}) }}" class="btn btn-warning btn-sm ms-2">
            <i class="bi bi-pencil"></i> Bearbeiten
        </a>
        {{ include('documentations/_delete_form.html.twig', {'button_class': 'btn btn-danger btn-sm ms-2'}) }}
    </div>
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h2 class="mb-0 fs-4">
                <i class="bi bi-journal-bookmark"></i>
                {{ documentation.docuName }}
            </h2>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Kurzbeschreibung</dt>
                <dd class="col-sm-9">{{ documentation.docuShortdescr }}</dd>

                <dt class="col-sm-3 text-muted">Beschreibung</dt>
                <dd class="col-sm-9">
                    <div class="bg-light rounded px-3 py-2 border" style="white-space: pre-wrap;">{{ documentation.docuDescription |raw}}</div>
                </dd>

                <dt class="col-sm-3 text-muted">Version</dt>
                <dd class="col-sm-9">{{ documentation.docuVersion }}</dd>

                <dt class="col-sm-3 text-muted">Ersteller</dt>
                <dd class="col-sm-9">{{ documentation.docuMaintainer ? documentation.docuMaintainer.fullname : '—' }}</dd>

                <dt class="col-sm-3 text-muted">Erstellt am</dt>
                <dd class="col-sm-9">{{ documentation.docuCreate ? documentation.docuCreate|date('d.m.Y H:i:s') : '—' }}</dd>

                <dt class="col-sm-3 text-muted">Geändert am</dt>
                <dd class="col-sm-9">{{ documentation.docuUpdate ? documentation.docuUpdate|date('d.m.Y H:i:s') : '—' }}</dd>
            </dl>
        </div>
    </div>
</div>
{% endblock %}
