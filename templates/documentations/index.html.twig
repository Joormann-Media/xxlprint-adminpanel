{% extends 'base.html.twig' %}

{% block title %}Documentations{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="bi bi-journal-code"></i> Documentations</h1>
        <a href="{{ path('app_documentations_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>
    {% if documentations|length > 0 %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
            {% for documentation in documentations %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-center mb-2">
                                <h5 class="card-title mb-0 me-2">
                                    <i class="bi bi-file-text me-1"></i>
                                    {{ documentation.docuName|default('Untitled') }}
                                </h5>
                                <span class="badge bg-info text-dark ms-auto">
                                    v{{ documentation.docuVersion|default('1.0') }}
                                </span>
                            </div>
                            <div class="mb-2 text-muted small">
                                <strong>{{ documentation.docuShortdescr|default('') }}</strong>
                            </div>
                            <div class="mb-2 small">
                                {{ documentation.docuDescription|default('')|striptags|length > 120 ? documentation.docuDescription|striptags|slice(0, 120) ~ '…' : documentation.docuDescription|default('')|striptags }}
                            </div>
                            <ul class="list-unstyled small mb-3">
                                <li>
                                    <strong>Created:</strong>
                                    {{ documentation.docuCreate ? documentation.docuCreate|date('Y-m-d H:i') : '—' }}
                                </li>
                                <li>
                                    <strong>Updated:</strong>
                                    {{ documentation.docuUpdate ? documentation.docuUpdate|date('Y-m-d H:i') : '—' }}
                                </li>
                            </ul>
                            <div class="mt-auto d-flex gap-2 justify-content-end">
                                <a href="{{ path('app_documentations_show', {'id': documentation.id}) }}" class="btn btn-outline-primary btn-sm" title="Show">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('app_documentations_edit', {'id': documentation.id}) }}" class="btn btn-outline-secondary btn-sm" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info text-center">
            <i class="bi bi-journal-x"></i> No documentations found. Write some legendary docs, mate!
        </div>
    {% endif %}
</div>
{% endblock %}
