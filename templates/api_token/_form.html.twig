{{ form_start(form, {'attr': {'autocomplete': 'off'}}) }}

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">
            <i class="bi bi-key"></i>
            {{ form.vars.value.id ? 'API-Token bearbeiten' : 'Neues API-Token' }}
        </h4>
    </div>

    <div class="card-body">
        <ul class="nav nav-tabs mb-3" id="apiTokenTabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" id="tab-general" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab">
                    <i class="bi bi-info-circle"></i> Allgemein
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="tab-partner" data-bs-toggle="tab" data-bs-target="#partner" type="button" role="tab">
                    <i class="bi bi-building"></i> Partnerfirma
                </button>
            </li>
        </ul>

        <div class="tab-content">

            <!-- Allgemein -->
            <div class="tab-pane fade show active" id="general" role="tabpanel">
                <div class="row g-3">
                    <div class="col-md-9">
                        {{ form_label(form.token) }}
                        {{ form_widget(form.token, {
                            'attr': {
                                'class': 'form-control text-monospace',
                                'readonly': true,
                                'style': 'background-color: #f8f9fa;',
                                'title': 'Dieses Token wird automatisch generiert und ist nicht verÃ¤nderbar.'
                            }
                        }) }}
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="button" class="btn btn-outline-secondary w-100" onclick="copyToken()">ðŸ“‹ Token kopieren</button>
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.type) }}
                        {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.createdAt) }}
                        {{ form_widget(form.createdAt, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.expiresAt) }}
                        {{ form_widget(form.expiresAt, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-4 pt-2">
                        <div class="form-check mt-4">
                            {{ form_widget(form.used, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.used, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Partner -->
            <div class="tab-pane fade" id="partner" role="tabpanel">
                <div class="row g-3">
                    <div class="col-md-6">
                        {{ form_label(form.partnerCompany) }}
                        {{ form_widget(form.partnerCompany, {'attr': {'class': 'form-select'}}) }}
                    </div>
                </div>
            </div>

        </div>

        <div class="text-end mt-4">
            <button class="btn btn-success">
                <i class="bi bi-save"></i> Speichern
            </button>
            <a href="{{ path('app_api_token_index') }}" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left"></i> ZurÃ¼ck
            </a>
        </div>
    </div>
</div>

{{ form_end(form) }}

<script>
    // Bootstrap Tabs aktivieren
    document.querySelectorAll('#apiTokenTabs button').forEach(function(triggerEl) {
        triggerEl.addEventListener('click', function(event) {
            event.preventDefault();
            bootstrap.Tab.getOrCreateInstance(triggerEl).show();
        });
    });

    // Token-Kopie-Funktion
    function copyToken() {
        const input = document.querySelector('input[name$="[token]"]');
        if (input) {
            navigator.clipboard.writeText(input.value).then(() => {
                alert("Token kopiert!");
            });
        }
    }
</script>
