{% extends 'base.html.twig' %}


{% block body %}
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <span><i class="bi bi-building"></i> Unternehmensprofil</span>
            <div>
                <a href="{{ path('app_company_index') }}" class="btn btn-outline-light btn-sm me-1" title="Zurück zur Liste">
                    <i class="bi bi-arrow-left-circle"></i>
                </a>
                <a href="{{ path('app_company_edit', {'id': company.id}) }}" class="btn btn-outline-light btn-sm me-1" title="Bearbeiten">
                    <i class="bi bi-pencil-square"></i>
                </a>
                {{ include('company/_delete_form.html.twig') }}
            </div>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6"><strong>ID:</strong> {{ company.id }}</div>
                <div class="col-md-6"><strong>Firmenname:</strong> {{ company.companyname }}</div>
                <div class="col-md-6"><strong>CEO:</strong> {{ company.ceoname }} {{ company.ceoprename }}</div>
                <div class="col-md-6"><strong>Straße:</strong> {{ company.street }} {{ company.streetno }}</div>
                <div class="col-md-6"><strong>PLZ / Ort:</strong> {{ company.zipcode }} {{ company.city }}</div>
                <div class="col-md-6"><strong>Land:</strong> {{ company.location }}</div>
                <div class="col-md-6"><strong>Telefon:</strong> {{ company.phone }}</div>
                <div class="col-md-6"><strong>Fax:</strong> {{ company.fax ?? '—' }}</div>
                <div class="col-md-6"><strong>E-Mail:</strong> <a href="mailto:{{ company.email }}">{{ company.email }}</a></div>
                <div class="col-md-6"><strong>Website:</strong> <a href="{{ company.web }}" target="_blank">{{ company.web }}</a></div>
                <div class="col-md-6"><strong>Steuernummer:</strong> {{ company.taxno }}</div>
                <div class="col-md-6"><strong>USt-ID:</strong> {{ company.taxid }}</div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
