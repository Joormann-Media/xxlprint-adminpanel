{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h1 class="h3 mb-0"><i class="bi bi-building"></i> FirmenEinstellungen</h1>
        {% if is_granted('ROLE_DEVELOPER') %}
            <a href="{{ path('app_company_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Neue Firma
            </a>
        {% endif %}
    </div>

    {% if companies|length == 0 %}
        <div class="alert alert-info text-center">Keine Firmen gefunden.</div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for company in companies %}
                <div class="col">
                    <div class="card shadow-sm h-100 rounded-4 border-0">
                        <div class="card-header bg-primary text-white d-flex align-items-center rounded-top-4">
                            {% if company.companyLogo %}
                                <img src="/uploads/{{ company.companyLogo }}" alt="Firmenlogo"
                                     class="img-thumbnail me-3 border-0 shadow-sm" style="max-width: 60px; background: white;">
                            {% else %}
                                <span class="me-3 text-muted small">Kein Logo</span>
                            {% endif %}
                            <div>
                                <span class="fw-bold">{{ company.companyname }}</span><br>
                                <span class="badge bg-light text-dark rounded-pill mt-1">Nr. {{ company.id }}</span>
                            </div>
                        </div>
                        <div class="card-body py-3">
                            <div class="mb-2">
                                <strong>Geschäftsführer*in:</strong>
                                {{ company.ceoprename }} {{ company.ceoname }}
                            </div>
                            <div class="mb-2">
                                <strong>Anschrift:</strong>
                                {{ company.street }} {{ company.streetno }}, {{ company.zipcode }} {{ company.city }}
                            </div>
                            <div class="mb-2">
                                <strong>Telefon:</strong> {{ company.phone }}<br>
                                <strong>Fax:</strong> {{ company.fax ?? '—' }}
                            </div>
                            <div class="mb-2">
                                <strong>E-Mail:</strong>
                                {% if company.email %}
                                    <a href="mailto:{{ company.email }}">{{ company.email }}</a>
                                {% else %}
                                    —
                                {% endif %}
                                <br>
                                <strong>Web:</strong>
                                {% if company.web %}
                                    <a href="{{ company.web }}" target="_blank">{{ company.web|replace({'https://': '', 'http://': ''}) }}</a>
                                {% else %}
                                    —
                                {% endif %}
                            </div>
                            <div class="mb-2">
                                <strong>Steuernummer:</strong> {{ company.taxno }}<br>
                                <strong>USt-IdNr.:</strong> {{ company.taxid }}
                            </div>
                            <div class="mb-2">
                                <strong>Personalnummernkreis:</strong>
                                {% if company.personalNrMin or company.personalNrMax %}
                                    <span class="badge bg-secondary rounded-pill">
                                        {{ company.personalNrMin ?? '?' }} &ndash; {{ company.personalNrMax ?? '?' }}
                                    </span>
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </div>
                            <div class="mb-2">
                                <strong>Standort:</strong> {{ company.location }}
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-end gap-2 bg-light rounded-bottom-4">
                            <a href="{{ path('app_company_show', {'id': company.id}) }}" class="btn btn-outline-primary btn-sm" title="Anzeigen">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="{{ path('app_company_edit', {'id': company.id}) }}" class="btn btn-outline-secondary btn-sm" title="Bearbeiten">
                                <i class="bi bi-pencil"></i>
                            </a>
                            {{ include('company/_delete_form.html.twig', { company: company }) }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
