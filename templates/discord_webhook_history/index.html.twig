{% extends 'base.html.twig' %}

{% block title %}Discord Webhook Historie{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fs-3">Discord Webhook History</h1>
        <a href="{{ path('app_discord_webhook_history_new') }}" class="btn btn-primary rounded-2 shadow-sm">+ Neuer Eintrag</a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for history in discord_webhook_histories %}
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-2 small text-muted">
                            <i class="bi bi-calendar-event"></i>
                            {{ history.timestamp ? history.timestamp|date('d.m.Y H:i') : '—' }}
                        </div>
                        <div class="fw-semibold mb-1 text-break" style="max-height:3rem; overflow:hidden;">
                            {{ history.hooktext|u.truncate(90, ' …') }}
                        </div>
                        <div class="mb-1 small">
                            <i class="bi bi-person-circle"></i>
                            {{ history.username ? history.username.username : '-' }}
                        </div>
                        <span class="badge bg-{{ history.hookstatus == 'success' ? 'success' : (history.hookstatus == 'error' ? 'danger' : 'secondary') }}">
                            {{ history.hookstatus|upper }}
                        </span>
                        <div class="mt-auto text-end">
                            <a href="{{ path('app_discord_webhook_history_show', {'id': history.id}) }}" class="btn btn-outline-primary btn-sm mt-2">Anzeigen</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col">
                <div class="alert alert-info">Keine Webhook-Historie gefunden.</div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
