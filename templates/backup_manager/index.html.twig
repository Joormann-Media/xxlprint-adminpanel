{% extends 'base.html.twig' %}

{% block title %}üóÑÔ∏è BackupManager √úbersicht{% endblock %}

{% block body %}
<div class="container my-5 px-2 px-md-0">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h1 class="mb-0">BackupManager ‚Äì Letzte Backups</h1>
        <a href="{{ path('app_backup_manager_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Neues Backup anlegen
        </a>
    </div>

    {% if backup_managers|length == 0 %}
        <div class="alert alert-info text-center">Noch keine Backups vorhanden.</div>
    {% endif %}

    <div class="row gy-4">
        {% for entry in backup_managers %}
            <div class="col-12 col-md-10 offset-md-1">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body p-4">
                        <div class="d-flex flex-wrap align-items-center gap-3 mb-3">
                            <span class="badge bg-dark fs-6 text-uppercase">{{ entry.type }}</span>
                            <span class="text-muted small">
                                <i class="bi bi-calendar2-check"></i>
                                {{ entry.createdAt ? entry.createdAt|date('d.m.Y H:i') : '‚Äì' }}
                            </span>
                            {% if entry.gitRemoteStatus %}
                                <span class="badge bg-secondary">
                                    <i class="bi bi-git"></i> {{ entry.gitRemoteStatus }}
                                </span>
                            {% endif %}
                        </div>
                        <div class="mb-2">
                            {% if entry.pathSql %}
                                <div>
                                    <i class="bi bi-filetype-sql text-primary"></i>
                                    <strong>SQL:</strong>
                                    <a href="{{ asset(entry.pathSql) }}" target="_blank" class="link-primary">{{ entry.pathSql|split('/')|last }}</a>
                                </div>
                            {% endif %}
                            {% if entry.pathProject %}
                                <div>
                                    <i class="bi bi-file-earmark-zip text-success"></i>
                                    <strong>Projekt:</strong>
                                    <a href="{{ asset(entry.pathProject) }}" target="_blank" class="link-success">{{ entry.pathProject|split('/')|last }}</a>
                                </div>
                            {% endif %}
                        </div>
                        {% if entry.gitStatusTimestamp or entry.gitStatusMessage %}
                            <div class="text-muted small">
                                {% if entry.gitStatusTimestamp %}
                                    <i class="bi bi-clock-history"></i> Git: {{ entry.gitStatusTimestamp|date('d.m.Y H:i') }}
                                {% endif %}
                                {% if entry.gitStatusMessage %}
                                    <br>
                                    <i class="bi bi-info-circle"></i> {{ entry.gitStatusMessage|e('html') }}
                                {% endif %}
                            </div>
                        {% endif %}
                        {% if entry.notes %}
                            <div class="mt-2 alert alert-warning py-2 px-3 mb-0 small">
                                <i class="bi bi-exclamation-circle"></i> {{ entry.notes|e('html') }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="card-footer bg-transparent border-0 d-flex justify-content-end gap-2">
                        <a href="{{ path('app_backup_manager_show', {'id': entry.id}) }}" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a href="{{ path('app_backup_manager_edit', {'id': entry.id}) }}" class="btn btn-outline-warning btn-sm">
                            <i class="bi bi-pencil"></i> Bearbeiten
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .card { transition: box-shadow 0.1s; }
        .card:hover { box-shadow: 0 0.5rem 2rem 0 #066c2a2e; }
        .alert-warning { background: #fffbe6; border-color: #ffe484; }
    </style>
{% endblock %}
