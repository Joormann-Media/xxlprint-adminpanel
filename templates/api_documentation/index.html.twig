{% extends 'base.html.twig' %}

{% block title %}API Dokumentationen{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="fs-3 mb-0">API Dokumentationen</h1>
        <a href="{{ path('app_api_documentation_new') }}" class="btn btn-success rounded-2 shadow-sm">
            <i class="bi bi-plus-lg"></i> Neu anlegen
        </a>
    </div>

    <div class="table-responsive shadow rounded">
        <table class="table align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>API-Name</th>
                    <th>Kurzbeschreibung</th>
         
                    <th>Erstellt</th>
                    <th>Letztes Update</th>
                    <th class="text-end">Aktionen</th>
                </tr>
            </thead>
            <tbody>
            {% for api_documentation in api_documentations %}
                <tr>
                    <td>{{ api_documentation.id }}</td>
                    
                    <td>
                        <div class="small text-break" style="max-width:220px;">
                            {{ api_documentation.documentationShort|striptags|u.truncate(70, '…') }}
                        </div>
                    </td>
                    <td>
                        <div class="small text-break" style="max-width:260px;">
                            {{ api_documentation.documentation|striptags|u.truncate(100, '…') }}
                        </div>
                    </td>
                    <td>
                        {{ api_documentation.createAt ? api_documentation.createAt|date('d.m.Y H:i') : '' }}
                    </td>
                    <td>
                        {{ api_documentation.lastUpdate ? api_documentation.lastUpdate|date('d.m.Y H:i') : '' }}
                    </td>
                    <td class="text-end">
                        <a href="{{ path('app_api_documentation_show', {'id': api_documentation.id}) }}" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="{{ path('app_api_documentation_edit', {'id': api_documentation.id}) }}" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center text-muted">Keine Einträge gefunden.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
