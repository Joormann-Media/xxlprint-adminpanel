{% extends 'base.html.twig' %}

{% block title %}API Doku Details{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-9 col-md-11">
            <div class="card shadow-lg border-0">
                <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                    <h2 class="h5 m-0"><i class="bi bi-journal-text"></i> API: {{ api_documentation.apiName }}</h2>
                    <a href="{{ path('app_api_documentation_index') }}" class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-left"></i> Zurück
                    </a>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">{{ api_documentation.id }}</dd>



                        <dt class="col-sm-3">Kurzbeschreibung</dt>
                        <dd class="col-sm-9">
                            <div class="bg-light rounded p-2 mb-1">
                                {{ api_documentation.documentationShort|raw }}
                            </div>
                        </dd>

                        <dt class="col-sm-3">Dokumentation</dt>
                        <dd class="col-sm-9">
                            <div class="bg-light rounded p-3" style="min-height:100px; font-size:1rem; font-family:monospace; overflow:auto;">
                                {{ api_documentation.documentation|raw }}
                            </div>
                        </dd>

                        <dt class="col-sm-3">Erstellt</dt>
                        <dd class="col-sm-9">{{ api_documentation.createAt ? api_documentation.createAt|date('d.m.Y H:i') : '–' }}</dd>

                        <dt class="col-sm-3">Letztes Update</dt>
                        <dd class="col-sm-9">{{ api_documentation.lastUpdate ? api_documentation.lastUpdate|date('d.m.Y H:i') : '–' }}</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light d-flex justify-content-end gap-2">
                    <a href="{{ path('app_api_documentation_edit', {'id': api_documentation.id}) }}" class="btn btn-outline-primary">
                        <i class="bi bi-pencil"></i> Bearbeiten
                    </a>
                    {{ include('api_documentation/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
