{% extends 'base.html.twig' %}


{% block body %}
    <div class="container py-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title mb-4">{{ button_label|default('Speichern') }} PopUp Kategorie</h2>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        {{ form_label(form.categoryName, 'Kategorie Name') }}
                        {{ form_widget(form.categoryName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.categoryName) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.erstelltAm, 'Erstellt Am') }}
                        {{ form_widget(form.erstelltAm, {'attr': {'class': 'form-control', 'readonly': 'readonly', 'value': "now"|date("Y-m-d H:i:s")}}) }}
                        {{ form_errors(form.erstelltAm) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.erstelltVon, 'Erstellt Von') }}
                        {{ form_widget(form.erstelltVon, {'attr': {'class': 'form-control', 'readonly': 'readonly', 'value': app.user.username}}) }}
                        {{ form_errors(form.erstelltVon) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description, 'Beschreibung') }}
                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_pop_up_category_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Zurück zur Übersicht
                        </a>
                        <button class="btn btn-primary" type="submit">
                            <i class="bi bi-check-circle"></i> {{ button_label|default('Speichern') }}
                        </button>
                        {{ include('pop_up_category/_delete_form.html.twig') }}
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
