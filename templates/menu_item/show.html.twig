{% extends 'base.html.twig' %}


{% block body %}
    <div class="container py-4">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0">MenuItem Details</h4>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ menu_item.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ menu_item.name }}</td>
                        </tr>
                        <tr>
                            <th>Route</th>
                            <td>{{ menu_item.route }}</td>
                        </tr>
                        <tr>
                            <th>MinRole</th>
                            <td>{{ menu_item.minRole }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ menu_item.status }}</td>
                        </tr>
                        <tr>
                            <th>LastUpdate</th>
                            <td>{{ menu_item.lastUpdate ? menu_item.lastUpdate|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>LastUpdateBy</th>
                            <td>{{ menu_item.lastUpdateBy }}</td>
                        </tr>
                        <tr>
                            <th>CreateAt</th>
                            <td>{{ menu_item.createAt ? menu_item.createAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>UpdateAt</th>
                            <td>{{ menu_item.updateAt ? menu_item.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>UpdateBy</th>
                            <td>{{ menu_item.updateBy }}</td>
                        </tr>
                        <tr>
                            <th>MenuId</th>
                            <td>{{ menu_item.menuId }}</td>
                        </tr>
                        <tr>
                            <th>SubMenuId</th>
                            <td>{{ menu_item.subMenuId }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer d-flex justify-content-end">
                <a href="{{ path('app_menu_item_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to list
                </a>
                <a href="{{ path('app_menu_item_edit', {'id': menu_item.id}) }}" class="btn btn-warning ms-2">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <div class="ms-2">
                    {{ include('menu_item/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
