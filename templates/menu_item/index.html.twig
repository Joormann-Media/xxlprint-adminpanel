{% extends 'base.html.twig' %}

{% block title %}MenuItem Übersicht{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">
            <i class="bi bi-list-ul"></i> MenuItems
        </h2>
        <div class="d-flex gap-2">
            <a href="{{ path('app_menu_item_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Neues MenuItem
            </a>
            <button id="deleteSelected" class="btn btn-danger">
                <i class="bi bi-trash"></i> Ausgewählte löschen
            </button>
        </div>
    </div>

    <form id="menuItemForm" action="{{ path('app_menu_item_bulk_delete') }}" method="POST">
        <input type="hidden" name="_token" value="{{ csrf_token('bulk_delete_items') }}">
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="menuItemTable">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th style="width:40px;"><input type="checkbox" id="selectAll"></th>
                                {% set columns = [
                                    {'name': 'ID', 'field': 'id'},
                                    {'name': 'Name', 'field': 'name'},
                                    {'name': 'Route', 'field': 'route'},
                                    {'name': 'Min. Rolle', 'field': 'minRole'},
                                    {'name': 'Menü', 'field': 'menuId'},
                                    {'name': 'Sub-Menü', 'field': 'subMenuId'}
                                ] %}
                                {% for column in columns %}
                                    <th>
                                        <div class="d-flex flex-column align-items-center">
                                            <span>{{ column.name }}</span>
                                            <div class="sort-arrows">
                                                <button type="button" class="btn btn-sm btn-light sort-btn" data-column="{{ loop.index0 }}" data-order="asc">&#9650;</button>
                                                <button type="button" class="btn btn-sm btn-light sort-btn" data-column="{{ loop.index0 }}" data-order="desc">&#9660;</button>
                                            </div>
                                        </div>
                                    </th>
                                {% endfor %}
                                <th class="text-center">Aktionen</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in menu_items %}
                                <tr>
                                    <td><input type="checkbox" class="menuCheckbox" name="menu_items[]" value="{{ item.id }}"></td>
                                    <td>{{ item.id }}</td>
                                    <td>{{ item.name }}</td>
                                    <td>{{ item.route }}</td>
                                    <td>
                                        {% if item.minRole %}
                                            <span class="badge bg-info">{{ item.minRole }}</span>
                                        {% else %}
                                            <span class="text-muted">–</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if item.menuId %}
                                            <span class="badge bg-primary">{{ item.menuId }}</span>
                                        {% else %}
                                            <span class="text-muted">–</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if item.subMenuId %}
                                            <span class="badge bg-secondary">{{ item.subMenuId }}</span>
                                        {% else %}
                                            <span class="text-muted">–</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <a href="{{ path('app_menu_item_show', {'id': item.id}) }}" class="btn btn-outline-info btn-sm me-1" title="Anzeigen">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('app_menu_item_edit', {'id': item.id}) }}" class="btn btn-outline-primary btn-sm" title="Bearbeiten">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-4">
                                        <i class="bi bi-exclamation-circle"></i> Keine MenuItems gefunden
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const selectAllCheckbox = document.getElementById("selectAll");
        const checkboxes = document.querySelectorAll(".menuCheckbox");
        const deleteButton = document.getElementById("deleteSelected");
        const form = document.getElementById("menuItemForm");

        // Select/Deselect all checkboxes
        selectAllCheckbox.addEventListener("change", () => {
            checkboxes.forEach(cb => cb.checked = selectAllCheckbox.checked);
        });

        // Bulk delete handler
        deleteButton.addEventListener("click", function(e) {
            e.preventDefault();
            if (document.querySelectorAll('.menuCheckbox:checked').length === 0) {
                alert("Bitte mindestens ein MenuItem auswählen!");
                return;
            }
            if (confirm("Möchtest du die ausgewählten MenuItems wirklich löschen?")) {
                form.submit();
            }
        });

        // Sorting functionality
        document.querySelectorAll(".sort-btn").forEach(button => {
            button.addEventListener("click", function () {
                let colIdx = parseInt(this.getAttribute("data-column")) + 1; // +1 wegen Checkbox-Spalte!
                let order = this.getAttribute("data-order");
                let table = document.querySelector("#menuItemTable tbody");
                let rows = Array.from(table.querySelectorAll("tr"));

                rows.sort((a, b) => {
                    let cellA = a.children[colIdx].innerText.trim();
                    let cellB = b.children[colIdx].innerText.trim();

                    if (!isNaN(cellA) && !isNaN(cellB)) {
                        return order === "asc" ? cellA - cellB : cellB - cellA;
                    } else {
                        return order === "asc" ? cellA.localeCompare(cellB) : cellB.localeCompare(cellA);
                    }
                });

                rows.forEach(row => table.appendChild(row));
            });
        });
    });
</script>
{% endblock %}
