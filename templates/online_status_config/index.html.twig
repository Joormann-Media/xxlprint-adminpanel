{% extends 'base.html.twig' %}

{% block title %}Online Status Configs{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h2 class="mb-0">Online Status Configs</h2>
        <a href="{{ path('app_online_status_config_new') }}" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Add Status Config
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <input type="text" id="statusConfigSearch" class="form-control" placeholder="ðŸ” Search...">
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped align-middle mb-0" id="statusConfigTable">
                    <thead class="table-light sticky-top">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Icon</th>
                            <th>Updated</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for online_status_config in online_status_configs %}
                            <tr>
                                <td>{{ online_status_config.id }}</td>
                                <td>{{ online_status_config.name }}</td>
                                <td>
                                    <span class="d-inline-block text-truncate" style="max-width: 200px;" title="{{ online_status_config.description }}">
                                        {{ online_status_config.description|default('â€”') }}
                                    </span>
                                </td>
                                <td>
                                    {% if online_status_config.iconName %}
                                        <span class="badge bg-light border">
                                            <i class="bi bi-image"></i> {{ online_status_config.iconName }}
                                        </span>
                                    {% else %}
                                        <span class="text-muted">â€”</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {{ online_status_config.updatedAt ? online_status_config.updatedAt|date('d.m.Y H:i') : 'â€”' }}
                                </td>
                                <td class="text-center">
                                    <a href="{{ path('app_online_status_config_show', {'id': online_status_config.id}) }}"
                                       class="btn btn-sm btn-outline-info" title="Show"><i class="bi bi-eye"></i></a>
                                    <a href="{{ path('app_online_status_config_edit', {'id': online_status_config.id}) }}"
                                       class="btn btn-sm btn-outline-primary ms-1" title="Edit"><i class="bi bi-pencil"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">No records found.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
    const searchInput = document.getElementById('statusConfigSearch');
    searchInput.addEventListener('input', function() {
        const value = this.value.toLowerCase();
        document.querySelectorAll("#statusConfigTable tbody tr").forEach(row => {
            row.style.display = row.innerText.toLowerCase().includes(value) ? '' : 'none';
        });
    });
});
</script>
{% endblock %}
