{# templates/online_status_config/_form.html.twig #}
<div class="card shadow-sm border-0 mb-3">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="bi bi-circle-half"></i> Online Status Config bearbeiten
        </h5>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
        <div class="row g-3">
            <div class="col-md-8">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-12">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.iconFile) }}
                <div class="mb-2">
                    {{ form_widget(form.iconFile, {'attr': {'class': 'form-control'}}) }}
                </div>
                {# Bildvorschau falls vorhanden #}
                {% if form.vars.value and form.vars.value.iconName %}
                    <div class="mt-2">
                        <img src="{{ asset('uploads/online_status_icons/' ~ form.vars.value.iconName) }}"
                             alt="Status Icon"
                             class="img-thumbnail"
                             style="max-width: 80px; max-height: 80px;">
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="mt-4 text-end">
            <button class="btn btn-primary">
                <i class="bi bi-save"></i> Speichern
            </button>
            <a href="{{ path('app_online_status_config_index') }}" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Zur√ºck
            </a>
        </div>
        {{ form_end(form) }}
    </div>
</div>
