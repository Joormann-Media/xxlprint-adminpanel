{% extends 'base.html.twig' %}

{% block title %}SchoolTour{% endblock %}

{% block body %}
    <h1>SchoolTour</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ school_tour.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ school_tour.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ school_tour.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ school_tour.type }}</td>
            </tr>
            <tr>
                <th>OperatingDays</th>
                <td>{{ school_tour.operatingDays ? school_tour.operatingDays|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>SchoolYear</th>
                <td>{{ school_tour.schoolYear }}</td>
            </tr>
            <tr>
                <th>StartAddress</th>
                <td>{{ school_tour.startAddress }}</td>
            </tr>
            <tr>
                <th>StartTime</th>
                <td>{{ school_tour.startTime ? school_tour.startTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndAddress</th>
                <td>{{ school_tour.endAddress }}</td>
            </tr>
            <tr>
                <th>EndTime</th>
                <td>{{ school_tour.endTime ? school_tour.endTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Route</th>
                <td>{{ school_tour.route }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_school_tour_index') }}">back to list</a>

    <a href="{{ path('app_school_tour_edit', {'id': school_tour.id}) }}">edit</a>

    {{ include('school_tour/_delete_form.html.twig') }}
{% endblock %}
