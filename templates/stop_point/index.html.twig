{% extends 'base.html.twig' %}

{% block title %}Stop Points{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h2 class="mb-0">Stop Points</h2>
        <a href="{{ path('app_stop_point_new') }}" class="btn btn-success">âž• New Stop Point</a>
    </div>
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <input type="text" id="stopPointSearch" class="form-control" placeholder="ðŸ” Search stop points...">
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="stopPointTable">
                    <thead class="table-light sticky-top">
                        <tr>
                            {% set columns = [
                                {'name': 'Id', 'field': 'id'},
                                {'name': 'Icon', 'field': 'stopPointIcon'},
                                {'name': 'Name', 'field': 'name'},
                                {'name': 'Type', 'field': 'type'},
                                {'name': 'Street', 'field': 'street'},
                                {'name': 'No.', 'field': 'streetNumber'},
                                {'name': 'Crossing', 'field': 'crossingStreet'},
                                {'name': 'ZIP', 'field': 'zip'},
                                {'name': 'City', 'field': 'city'},
                                {'name': 'Latitude', 'field': 'latitude'},
                                {'name': 'Longitude', 'field': 'longitude'},
                                {'name': 'Max. Persons', 'field': 'maxPersons'},
                                {'name': 'Notes', 'field': 'notes'},
                            ] %}
                            {% for column in columns %}
                                <th>
                                    <div class="d-flex flex-column align-items-center">
                                        <span>{{ column.name }}</span>
                                        <div class="sort-arrows d-flex flex-row">
                                            <button type="button" class="btn btn-sm btn-link sort-btn p-0" data-col="{{ loop.index0 }}" data-order="asc" title="Sort ascending">&#9650;</button>
                                            <button type="button" class="btn btn-sm btn-link sort-btn p-0" data-col="{{ loop.index0 }}" data-order="desc" title="Sort descending">&#9660;</button>
                                        </div>
                                    </div>
                                </th>
                            {% endfor %}
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for stop in stop_points %}
                        <tr>
                            <td>{{ stop.id }}</td>
                            <td>
                                {% if stop.stopPointIcon %}
                                    <span style="font-size: 1.5em;">{{ stop.stopPointIcon|raw }}</span>
                                {% endif %}
                            </td>
                            <td>{{ stop.name }}</td>
                            <td>
                                {% if stop.type == 'address' %}
                                    <span class="badge bg-primary">Address</span>
                                {% elseif stop.type == 'crossing' %}
                                    <span class="badge bg-warning text-dark">Crossing</span>
                                {% elseif stop.type == 'bus_stop' %}
                                    <span class="badge bg-info text-dark">Bus Stop</span>
                                {% elseif stop.type == 'bus_parking' %}
                                    <span class="badge bg-secondary">Bus Parking</span>
                                {% else %}
                                    <span class="badge bg-light text-dark">{{ stop.type|default('â€”') }}</span>
                                {% endif %}
                            </td>
                            <td>{{ stop.street }}</td>
                            <td>{{ stop.streetNumber }}</td>
                            <td>{{ stop.crossingStreet }}</td>
                            <td>{{ stop.zip }}</td>
                            <td>{{ stop.city }}</td>
                            <td>{{ stop.latitude }}</td>
                            <td>{{ stop.longitude }}</td>
                            <td>{{ stop.maxPersons }}</td>
                            <td>
                                <span class="d-inline-block text-truncate" style="max-width: 160px;" title="{{ stop.notes }}">
                                    {{ stop.notes|default('â€”') }}
                                </span>
                            </td>
                            <td class="text-center">
                                <a href="{{ path('app_stop_point_show', {'id': stop.id}) }}"
                                   class="btn btn-sm btn-outline-info" title="Show"><i class="bi bi-eye"></i></a>
                                <a href="{{ path('app_stop_point_edit', {'id': stop.id}) }}"
                                   class="btn btn-sm btn-outline-primary ms-1" title="Edit"><i class="bi bi-pencil"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="15" class="text-center">No records found.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .sort-arrows button {
        font-size: 1rem;
        color: #888;
        background: none;
        border: none;
        line-height: 1;
        margin: 0 2px;
    }
    .sort-arrows button:hover {
        color: #0d6efd;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Search
        document.getElementById('stopPointSearch').addEventListener('input', function() {
            const value = this.value.toLowerCase();
            document.querySelectorAll("#stopPointTable tbody tr").forEach(row => {
                row.style.display = row.innerText.toLowerCase().includes(value) ? '' : 'none';
            });
        });

        // Sorting (fÃ¼r jede Spalte, die Pfeile hat)
        document.querySelectorAll(".sort-btn").forEach(button => {
            button.addEventListener("click", function(e) {
                e.preventDefault();
                let colIdx = parseInt(this.getAttribute("data-col"));
                let order = this.getAttribute("data-order");
                let table = document.querySelector("#stopPointTable tbody");
                let rows = Array.from(table.querySelectorAll("tr"));

                rows.sort((a, b) => {
                    let cellA = a.children[colIdx].innerText.trim();
                    let cellB = b.children[colIdx].innerText.trim();

                    // Zahlensortierung falls mÃ¶glich
                    let numA = parseFloat(cellA.replace(",", "."));
                    let numB = parseFloat(cellB.replace(",", "."));
                    if (!isNaN(numA) && !isNaN(numB)) {
                        return order === "asc" ? numA - numB : numB - numA;
                    } else {
                        return order === "asc" ? cellA.localeCompare(cellB) : cellB.localeCompare(cellA);
                    }
                });

                rows.forEach(row => table.appendChild(row));
            });
        });
    });
</script>
{% endblock %}
