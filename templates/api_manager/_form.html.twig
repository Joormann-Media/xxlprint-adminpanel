{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
<div class="card shadow-lg border-0 my-4">
    <div class="card-body">
        <h2 class="card-title fs-5 mb-4">{{ form.vars.value.id ? 'API Manager bearbeiten' : 'Neuen API Manager anlegen' }}</h2>

        <div class="mb-3">
            <label for="{{ form.name.vars.id }}" class="form-label">Name</label>
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>
        <div class="mb-3">
            <label for="{{ form.apiCreate.vars.id }}" class="form-label">Erstellt am</label>
            {{ form_widget(form.apiCreate, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.apiCreate) }}
        </div>
        <div class="mb-3">
            <label for="{{ form.apiStatus.vars.id }}" class="form-label">Status</label>
            {{ form_widget(form.apiStatus, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.apiStatus) }}
        </div>
        <div class="mb-3">
            <label for="{{ form.apiDescription.vars.id }}" class="form-label">Beschreibung (HTML möglich)</label>
            {{ form_widget(form.apiDescription) }}
            {{ form_errors(form.apiDescription) }}
        </div>
    </div>
    <div class="card-footer bg-light d-flex justify-content-between">
        <a href="{{ path('app_api_manager_index') }}" class="btn btn-outline-secondary">Zurück</a>
        <button type="submit" class="btn btn-success px-4">
            <i class="bi bi-save"></i> Speichern
        </button>
    </div>
</div>
{{ form_end(form) }}
