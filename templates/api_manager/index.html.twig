{% extends 'base.html.twig' %}

{% block title %}API Manager Übersicht{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="fs-3">API Manager</h1>
        <a href="{{ path('app_api_manager_new') }}" class="btn btn-success rounded-2 shadow-sm">
            <i class="bi bi-plus-lg"></i> Neu anlegen
        </a>
    </div>

    <div class="table-responsive shadow rounded">
        <table class="table align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Erstellt am</th>
                    <th>Status</th>
                    <th>Beschreibung</th>
                    <th class="text-end">Aktionen</th>
                </tr>
            </thead>
            <tbody>
            {% for api_manager in api_managers %}
                <tr>
                    <td>{{ api_manager.id }}</td>
                    <td class="fw-semibold">{{ api_manager.name }}</td>
                    <td>{{ api_manager.apiCreate ? api_manager.apiCreate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <span class="badge bg-{{ api_manager.apiStatus == 'active' ? 'success' : (api_manager.apiStatus == 'inactive' ? 'secondary' : 'warning') }}">
                            {{ api_manager.apiStatus|capitalize }}
                        </span>
                    </td>
                    <td>
                        <div class="small text-break" style="max-width:280px; min-width:140px;">
                            {{ api_manager.apiDescription|striptags|u.truncate(80, '…') }}
                        </div>
                    </td>
                    <td class="text-end">
                        <a href="{{ path('app_api_manager_show', {'id': api_manager.id}) }}" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="{{ path('app_api_manager_edit', {'id': api_manager.id}) }}" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted">Keine Einträge gefunden.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
