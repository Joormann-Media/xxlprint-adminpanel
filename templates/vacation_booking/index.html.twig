{% extends 'base.html.twig' %}

{% block title %}VacationBooking index{% endblock %}

{% block body %}
    <h1>VacationBooking index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateTaken</th>
                <th>Days</th>
                <th>Reason</th>
                <th>Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vacation_booking in vacation_bookings %}
            <tr>
                <td>{{ vacation_booking.id }}</td>
                <td>{{ vacation_booking.dateTaken ? vacation_booking.dateTaken|date('Y-m-d') : '' }}</td>
                <td>{{ vacation_booking.days }}</td>
                <td>{{ vacation_booking.reason }}</td>
                <td>{{ vacation_booking.comment }}</td>
                <td>
                    <a href="{{ path('app_vacation_booking_show', {'id': vacation_booking.id}) }}">show</a>
                    <a href="{{ path('app_vacation_booking_edit', {'id': vacation_booking.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vacation_booking_new') }}">Create new</a>
{% endblock %}
