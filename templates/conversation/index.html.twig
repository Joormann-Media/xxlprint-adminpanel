{% extends 'base.html.twig' %}

{% block title %}Conversation index{% endblock %}

{% block body %}
    <h1>Conversation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IsGroup</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>LastMessageAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for conversation in conversations %}
            <tr>
                <td>{{ conversation.id }}</td>
                <td>{{ conversation.isGroup ? 'Yes' : 'No' }}</td>
                <td>{{ conversation.name }}</td>
                <td>{{ conversation.createdAt ? conversation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ conversation.lastMessageAt ? conversation.lastMessageAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_conversation_show', {'id': conversation.id}) }}">show</a>
                    <a href="{{ path('app_conversation_edit', {'id': conversation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_conversation_new') }}">Create new</a>
{% endblock %}
