<div class="card shadow-sm">
    <div class="card-body">
        {{ form_start(form) }}

        <div class="row g-3">
            <div class="col-md-6">
                <label for="{{ form.name.vars.id }}" class="form-label">Titel</label>
                {{ form_widget(form.name, { attr: { class: 'form-control' } }) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="col-md-6">
                <label for="{{ form.status.vars.id }}" class="form-label">Status</label>
                {{ form_widget(form.status, { attr: { class: 'form-control' } }) }}
                {{ form_errors(form.status) }}
            </div>

            <div class="col-md-6">
                <label for="{{ form.expiresAt.vars.id }}" class="form-label">Ablaufdatum</label>
                {{ form_widget(form.expiresAt, { attr: { class: 'form-control' } }) }}
                {{ form_errors(form.expiresAt) }}
            </div>

            <div class="col-md-6">
                <label for="{{ form.createdAt.vars.id }}" class="form-label">Erstellt am</label>
                {{ form_widget(form.createdAt, { attr: { class: 'form-control' } }) }}
                {{ form_errors(form.createdAt) }}
            </div>

            <div class="col-md-6">
                <label for="{{ form.createdBy.vars.id }}" class="form-label">Erstellt von</label>
                {{ form_widget(form.createdBy, { attr: { class: 'form-control' } }) }}
                {{ form_errors(form.createdBy) }}
            </div>

            <div class="col-12">
                <label for="{{ form.description.vars.id }}" class="form-label">Kurzbeschreibung</label>
                {{ form_widget(form.description, { attr: { class: 'form-control' } }) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="col-12">
                <label for="{{ form.content.vars.id }}" class="form-label">Inhalt</label>
                {{ form_widget(form.content) }}
                {{ form_errors(form.content) }}
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save me-1"></i> Speichern
            </button>
            <a href="{{ path('admin_app_help_entry_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Abbrechen
            </a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
