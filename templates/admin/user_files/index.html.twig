{% extends 'base.html.twig' %}


{% block body %}
<div class="container py-4">
    <h2 class="mb-4">ğŸ‘¥ Benutzer-Dateien</h2>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Benutzername</th>
                <th scope="col">E-Mail</th>
                <th scope="col">Verzeichnisse</th>
                <th scope="col">Aktionen</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% for subdir in ['files', 'avatar', 'public', 'private'] %}
                            <a href="{{ path('admin_user_files', {userId: user.id, subdir: subdir}) }}" class="badge bg-secondary text-decoration-none me-1">
                                {{ subdir|capitalize }}
                            </a>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('admin_user_files', {userId: user.id, subdir: 'files'}) }}" class="btn btn-sm btn-outline-primary">
                            ğŸ“ Dateien ansehen
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted">Keine Benutzer gefunden.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
