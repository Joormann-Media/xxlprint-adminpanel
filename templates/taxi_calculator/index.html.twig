<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Suchfeld
        document.getElementById('taxiCalculatorSearch').addEventListener('input', function() {
            const value = this.value.toLowerCase();
            document.querySelectorAll("#taxiCalculatorTable tbody tr").forEach(row => {
