{% extends 'base.html.twig' %}

{% block title %}Kostenstellen{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h1 class="mb-0">Kostenstellen</h1>
        <a href="{{ path('app_cost_center_new') }}" class="btn btn-success">âž• Neue Kostenstelle</a>
    </div>

    {% if cost_centers is empty %}
        <div class="alert alert-info">Keine Kostenstellen gefunden.</div>
    {% endif %}

    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
        {% for cc in cost_centers %}
        <div class="col">
            <div class="card h-100 shadow rounded-4 border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="badge {{ cc.active ? 'bg-success' : 'bg-secondary' }}">
                            {{ cc.active ? 'Aktiv' : 'Inaktiv' }}
                        </span>
                        <span class="fw-bold text-primary">#{{ cc.code }}</span>
                    </div>
                    <h5 class="card-title mb-1">{{ cc.name }}</h5>
                    <div class="mb-2 text-muted" style="min-height:2.5em;">{{ cc.description ?: '-' }}</div>
                    <div class="d-flex justify-content-between align-items-end mt-3">
                        <a href="{{ path('app_cost_center_show', {'id': cc.id}) }}" class="btn btn-outline-primary btn-sm">Anzeigen</a>
                        <a href="{{ path('app_cost_center_edit', {'id': cc.id}) }}" class="btn btn-outline-secondary btn-sm">Bearbeiten</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
