{% extends 'base.html.twig' %}

{% block title %}Kostenstelle anlegen{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h3 class="mb-0">Kostenstelle anlegen</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="row g-4">
                        <!-- Linke Spalte: Hauptdaten -->
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.company) }}
                                {{ form_widget(form.company, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.company) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.code) }}
                                {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.code) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.name) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 2}}) }}
                                {{ form_errors(form.description) }}
                            </div>
                            <div class="mb-3">
                                <div class="form-check">
                                    {{ form_widget(form.active, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(form.active, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                                {{ form_errors(form.active) }}
                            </div>
                        </div>
                        <!-- Rechte Spalte: Mitarbeiter -->
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.employees) }}
                                {{ form_widget(form.employees, {
                                    'attr': {
                                        'class': 'form-select',
                                        'multiple': 'multiple',
                                        'size': 12
                                    }
                                }) }}
                                {{ form_errors(form.employees) }}
                                <div class="form-text">
                                    <small>Halte <kbd>Strg</kbd> oder <kbd>Cmd</kbd> zum Mehrfach-Ausw√§hlen.</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end mt-4">
                        <button class="btn btn-success px-4" type="submit">Speichern</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
