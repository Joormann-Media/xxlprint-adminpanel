{% extends 'base.html.twig' %}

{% block title %}Media Items{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="bi bi-collection-play"></i> Media Items</h1>
        <a href="{{ path('app_media_item_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>
    
    {% if media_items|length > 0 %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
            {% for media_item in media_items %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        {% if media_item.coverUrl %}
                            <img src="{{ media_item.coverUrl }}" class="card-img-top img-fluid" alt="{{ media_item.title }}">
                        {% else %}
                            <div class="bg-secondary d-flex align-items-center justify-content-center card-img-top" style="height:180px;">
                                <i class="bi bi-image text-white fs-1"></i>
                            </div>
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-1">
                                {{ media_item.title|default('Untitled') }}
                                {% if media_item.isFavorite %}
                                    <i class="bi bi-star-fill text-warning ms-1" title="Favorite"></i>
                                {% endif %}
                            </h5>
                            <p class="card-text text-muted mb-2">
                                <span class="badge bg-info me-1">{{ media_item.type }}</span>
                                <span class="badge bg-secondary">{{ media_item.sourceSystem }}</span>
                                {% if not media_item.isVisible %}
                                    <span class="badge bg-warning text-dark ms-1">Hidden</span>
                                {% endif %}
                            </p>
                            <p class="card-text small mb-2">
                                <strong>Description:</strong><br>
                                {{ media_item.description|default('No description')|u.truncate(120) }}
                            </p>
                            <ul class="list-unstyled mb-3 small">
                                <li><strong>Local Path:</strong> <span class="text-break">{{ media_item.localPath }}</span></li>
                                <li><strong>External ID:</strong> {{ media_item.externalId|default('-') }}</li>
                            </ul>
                            <div class="mt-auto d-flex justify-content-end gap-2">
                                <a href="{{ path('app_media_item_show', {'id': media_item.id}) }}" class="btn btn-outline-primary btn-sm" title="Show">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('app_media_item_edit', {'id': media_item.id}) }}" class="btn btn-outline-secondary btn-sm" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info text-center">
            <i class="bi bi-emoji-frown"></i> No media items found. Even LeChuck finds more treasure.
        </div>
    {% endif %}
</div>
{% endblock %}
