{% extends 'base.html.twig' %}

{% block title %}ApiClient{% endblock %}

{% block body %}
    <h1>ApiClient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ api_client.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ api_client.username }}</td>
            </tr>
            <tr>
                <th>Passkey</th>
                <td>{{ api_client.passkey }}</td>
            </tr>
            <tr>
                <th>IpWhitelist</th>
                <td>{{ api_client.ipWhitelist ? api_client.ipWhitelist|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>AuthKey</th>
                <td>{{ api_client.authKey }}</td>
            </tr>
            <tr>
                <th>IsValid</th>
                <td>{{ api_client.isValid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Expires</th>
                <td>{{ api_client.expires ? api_client.expires|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>RegisterToken</th>
                <td>{{ api_client.registerToken }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ api_client.createdAt ? api_client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_api_client_index') }}">back to list</a>

    <a href="{{ path('app_api_client_edit', {'id': api_client.id}) }}">edit</a>

    {{ include('api_client/_delete_form.html.twig') }}
{% endblock %}
