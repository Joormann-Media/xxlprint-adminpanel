{% extends 'base.html.twig' %}

{% block title %}API-Client Registrierung{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'autocomplete': 'off'}}) }}

    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">
                <i class="bi bi-link-45deg"></i>
                Registrierung für API-Client
            </h4>
        </div>

        <div class="card-body">
            <ul class="nav nav-tabs mb-3" id="clientTabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" id="tab-client" data-bs-toggle="tab" data-bs-target="#client" type="button" role="tab">
                        <i class="bi bi-person"></i> Client
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="tab-security" data-bs-toggle="tab" data-bs-target="#security" type="button" role="tab">
                        <i class="bi bi-shield-lock"></i> Sicherheit
                    </button>
                </li>
            </ul>

            <div class="tab-content">
                <!-- Tab 1: Client -->
                <div class="tab-pane fade show active" id="client" role="tabpanel">
                    <div class="row g-3">
                        <div class="col-md-6">
                            {{ form_label(form.partnerCompany) }}
                            {{ form_widget(form.partnerCompany, {'attr': {'class': 'form-control', 'readonly': true, 'disabled': true}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.expires) }}
                            {{ form_widget(form.expires, {'attr': {'class': 'form-control', 'readonly': true}}) }}
                        </div>
                        <div class="col-md-12">
                            {{ form_label(form.ipWhitelist) }}
                            {{ form_widget(form.ipWhitelist, {'attr': {'class': 'form-control'}}) }}
                            <small class="form-text text-muted">Beispiel: [ "192.168.1.1", "203.0.113.4" ]</small>
                        </div>
                    </div>
                </div>

                <!-- Tab 2: Sicherheit -->
                <div class="tab-pane fade" id="security" role="tabpanel">
                    <div class="row g-3">
                        <div class="col-md-6">
                            {{ form_label(form.authKey) }}
                            {{ form_widget(form.authKey, {'attr': {'class': 'form-control', 'readonly': true}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.passkey) }}
                            {{ form_widget(form.passkey, {'attr': {'class': 'form-control', 'readonly': true}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.registerToken) }}
                            {{ form_widget(form.registerToken, {'attr': {'class': 'form-control', 'readonly': true}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.createdAt) }}
                            {{ form_widget(form.createdAt, {'attr': {'class': 'form-control', 'readonly': true}}) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-end mt-4">
                <button class="btn btn-primary">
                    <i class="bi bi-check2-circle"></i> Registrierung abschließen
                </button>
            </div>
        </div>
    </div>

    {{ form_end(form) }}

    <script>
        document.querySelectorAll('#clientTabs button').forEach(function(triggerEl) {
            triggerEl.addEventListener('click', function (event) {
                event.preventDefault();
                bootstrap.Tab.getOrCreateInstance(triggerEl).show();
            });
        });
    </script>
{% endblock %}
