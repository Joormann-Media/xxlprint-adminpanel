{% extends 'base.html.twig' %}


{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-plus-circle me-1"></i> {{ page_title }}
                    </h5>
                </div>

                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.module) }}
                        {{ form_widget(form.module, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.module) }}
                    </div>

                    <div class="mb-3 form-check">
                        {{ form_widget(form.isVisible, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.isVisible, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(form.isVisible) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.sortOrder) }}
                        {{ form_widget(form.sortOrder, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.sortOrder) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.position) }}
                        {{ form_widget(form.position, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.position) }}
                    </div>




                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_user_dashboard_config_me') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Zurück
                        </a>
                        <button class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Hinzufügen
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
