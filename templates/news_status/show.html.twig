{% extends 'base.html.twig' %}

{% block title %}NewsStatus{% endblock %}

{% block body %}
    <h1>NewsStatus</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news_status.id }}</td>
            </tr>
            <tr>
                <th>ShownAt</th>
                <td>{{ news_status.shownAt ? news_status.shownAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ReadAt</th>
                <td>{{ news_status.readAt ? news_status.readAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Pinned</th>
                <td>{{ news_status.pinned ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_news_status_index') }}">back to list</a>

    <a href="{{ path('app_news_status_edit', {'id': news_status.id}) }}">edit</a>

    {{ include('news_status/_delete_form.html.twig') }}
{% endblock %}
