{% extends 'base.html.twig' %}

{% block title %}NewsStatus index{% endblock %}

{% block body %}
    <h1>NewsStatus index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ShownAt</th>
                <th>ReadAt</th>
                <th>Pinned</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news_status in news_statuses %}
            <tr>
                <td>{{ news_status.id }}</td>
                <td>{{ news_status.shownAt ? news_status.shownAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ news_status.readAt ? news_status.readAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ news_status.pinned ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_news_status_show', {'id': news_status.id}) }}">show</a>
                    <a href="{{ path('app_news_status_edit', {'id': news_status.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_news_status_new') }}">Create new</a>
{% endblock %}
