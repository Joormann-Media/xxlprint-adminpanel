{% extends 'base.html.twig' %}

{% block title %}Ride Variations{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h2 class="mb-0">Ride Variation List</h2>
        <a href="{{ path('app_ride_variation_new') }}" class="btn btn-success">âž• New Ride Variation</a>
    </div>
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <input type="text" id="variationSearch" class="form-control" placeholder="ðŸ” Search ride variations...">
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped align-middle mb-0" id="variationTable">
                    <thead class="table-light sticky-top">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for ride_variation in ride_variations %}
                        <tr>
                            <td>{{ ride_variation.id }}</td>
                            <td>{{ ride_variation.name }}</td>
                            <td>
                                <span class="d-inline-block text-truncate" style="max-width: 250px;">
                                    {{ ride_variation.description|default('â€”') }}
                                </span>
                            </td>
                            <td class="text-center">
                                <a href="{{ path('app_ride_variation_show', {'id': ride_variation.id}) }}"
                                   class="btn btn-sm btn-outline-info" title="Show"><i class="bi bi-eye"></i></a>
                                <a href="{{ path('app_ride_variation_edit', {'id': ride_variation.id}) }}"
                                   class="btn btn-sm btn-outline-primary ms-1" title="Edit"><i class="bi bi-pencil"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">No records found.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
    const searchInput = document.getElementById('variationSearch');
    searchInput.addEventListener('input', function() {
        const value = this.value.toLowerCase();
        document.querySelectorAll("#variationTable tbody tr").forEach(row => {
            row.style.display = row.innerText.toLowerCase().includes(value) ? '' : 'none';
        });
    });
});
</script>
{% endblock %}
