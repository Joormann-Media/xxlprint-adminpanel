<div class="card border-danger shadow-sm mb-4">
    <div class="card-body text-end">
        <form method="post"
              action="{{ path('app_school_delete', {'id': school.id}) }}"
              onsubmit="return confirm('Willst du diesen Eintrag wirklich löschen? Das kann nicht rückgängig gemacht werden!');"
              class="d-inline">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ school.id) }}">
            <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow-sm">
                <i class="bi bi-trash"></i> Löschen
            </button>
        </form>
    </div>
    <div class="card-footer bg-transparent border-danger small text-danger text-end">
        <i class="bi bi-exclamation-triangle-fill"></i> Diese Aktion kann nicht rückgängig gemacht werden!
    </div>
</div>
