{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4 d-flex align-items-center justify-content-between">
                    <h2 class="mb-0 fs-4">Todolist-Details</h2>
                    <span class="badge
                        {% if todolist.status == 'done' %}
                            bg-success
                        {% elseif todolist.status == 'wip' %}
                            bg-warning text-dark
                        {% else %}
                            bg-danger
                        {% endif %}
                        text-uppercase px-3 py-2 fs-6"
                    >
                        {{ todolist.status|upper }}
                    </span>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>ID</strong>
                            <span>{{ todolist.id }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Name</strong>
                            <span>{{ todolist.name }}</span>
                        </li>
                        <li class="list-group-item">
                            <strong>Description</strong>
                            <div class="text-muted small mt-1">{{ todolist.description }}</div>
                        </li>
                        <li class="list-group-item">
                            <strong>Notes</strong>
                            <div class="text-muted small mt-1">{{ todolist.notes }}</div>
                        </li>
                    </ul>
                    <div class="d-flex gap-2 justify-content-end">
                        <a href="{{ path('app_todolist_index') }}" class="btn btn-outline-secondary rounded-3">
                            <i class="bi bi-arrow-left"></i> Zur√ºck
                        </a>
                        <a href="{{ path('app_todolist_edit', {'id': todolist.id}) }}" class="btn btn-outline-primary rounded-3">
                            <i class="bi bi-pencil"></i> Bearbeiten
                        </a>
                        {{ include('todolist/_delete_form.html.twig', { 'class': 'd-inline' }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
