{# templates/todolist/_form.html.twig #}

<div class="card shadow rounded-4">
    <div class="card-header bg-primary text-white rounded-top-4">
        <h2 class="fs-5 mb-0">Todolist bearbeiten/erstellen</h2>
    </div>
    <div class="card-body">
        {{ form_start(form, {'attr': {'autocomplete': 'off'}}) }}
        <div class="mb-3">
            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Name'}}) }}
            {{ form_errors(form.name) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Beschreibung'}}) }}
            {{ form_errors(form.description) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.notes, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
            {{ form_widget(form.notes, {'attr': {'class': 'form-control', 'placeholder': 'Notizen'}}) }}
            {{ form_errors(form.notes) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.status, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
            {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.status) }}
        </div>
        <div class="d-flex gap-2 justify-content-end mt-4">
            <button type="submit" class="btn btn-primary rounded-3 px-4">
                <i class="bi bi-save"></i> Speichern
            </button>
            <a href="{{ path('app_todolist_index') }}" class="btn btn-outline-secondary rounded-3">
                <i class="bi bi-x-circle"></i> Abbrechen
            </a>
        </div>
        {{ form_end(form, {'render_rest': false}) }}
    </div>
</div>
