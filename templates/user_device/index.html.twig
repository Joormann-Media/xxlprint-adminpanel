{% extends 'base.html.twig' %}


{% block body %}
<div class="container my-4">
    <h1 class="mb-4">Geräteverwaltung</h1>

    <div class="card shadow-sm">
        <div class="card-body table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Gerätename</th>
                        <th>Fingerprint</th>
                        <th>IP-Adresse</th>
                        <th>User Agent</th>
                        <th>Registriert am</th>
                        <th>Vertraut</th>
                        <th>Aktiv</th>
                        <th>Aktionen</th>
                    </tr>
                </thead>
                <tbody>
                {% for user_device in user_devices %}
                    <tr>
                        <td>{{ user_device.id }}</td>
                        <td>{{ user_device.deviceName }}</td>
                        <td><code>{{ user_device.deviceFingerprint|slice(0, 10) ~ '…' }}</code></td>
                        <td>{{ user_device.ipAddress }}</td>
                        <td class="text-muted small">{{ user_device.userAgent|slice(0, 30) ~ '…' }}</td>
                        <td>{{ user_device.registeredAt ? user_device.registeredAt|date('d.m.Y H:i') : '—' }}</td>
                        <td>
                            {% if user_device.isTrusted %}
                                <span class="badge bg-success">Ja</span>
                            {% else %}
                                <span class="badge bg-secondary">Nein</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if user_device.isActive %}
                                <span class="badge bg-success">Aktiv</span>
                            {% else %}
                                <span class="badge bg-danger">Deaktiviert</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('app_user_device_show', {'id': user_device.id}) }}" class="btn btn-outline-primary">Anzeigen</a>
                                <a href="{{ path('app_user_device_edit', {'id': user_device.id}) }}" class="btn btn-outline-secondary">Bearbeiten</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center text-muted py-4">Keine Geräte gefunden.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3 text-end">
        <a href="{{ path('app_user_device_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Neues Gerät hinzufügen
        </a>
    </div>
</div>
{% endblock %}
