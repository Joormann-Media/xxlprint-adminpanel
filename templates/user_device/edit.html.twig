{% extends 'base.html.twig' %}


{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Benutzergerät bearbeiten</h1>

        {% include 'user_device/_form.html.twig' with { 'is_edit': true } %}

        <form method="post" action="{{ path('app_user_device_delete', {'id': user_device.id}) }}" class="mt-3" onsubmit="return confirm('Wirklich löschen?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user_device.id) }}">
            <button class="btn btn-outline-danger"><i class="bi bi-trash"></i> Löschen</button>
        </form>


    </div>
{% endblock %}
