{% extends 'base.html.twig' %}

{% block title %}Fahrzeugdokumente Ãœbersicht{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h2 class="mb-0">Fahrzeugdokumente Ãœbersicht</h2>
        <div>
            <a href="{{ path('app_vehicle_document_new') }}" class="btn btn-success">
                âž• Neues Dokument hinzufÃ¼gen
            </a>
        </div>
    </div>

    {# --- Suchfeld oben --- #}
    <div class="d-flex justify-content-between align-items-center mb-2 flex-wrap gap-2">
        <form method="get"
              action="{{ path('app_vehicle_document_index') }}"
              class="d-inline-flex align-items-center"
              style="gap: 0.5rem;">
            <input id="searchInput"
                   name="search"
                   value="{{ searchTerm|default('') }}"
                   class="form-control w-auto"
                   type="search"
                   placeholder="ðŸ” Suche in allen Feldern..."
                   style="width: 240px;" />
            <button type="submit" class="btn btn-outline-primary">Suchen</button>
        </form>
    </div>

    <div id="tableAndPagination">
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Id</th>
                        <th>Dokumenttyp</th>
                        <th>Bild / Datei</th>
                        <th>Hochgeladen am</th>
                        <th>Aktionen</th>
                    </tr>
                </thead>
                <tbody>
                {% for vehicle_document in vehicle_documents %}
                    <tr>
                        <td>{{ vehicle_document.id }}</td>
                        <td>{{ vehicle_document.vehicleDoctype }}</td>
                        <td>
                            {% if vehicle_document.vehicleDocimage %}
                                <a href="{{ asset(vehicle_document.vehicleDocimage) }}"
                                   target="_blank"
                                   class="btn btn-sm btn-outline-info">
                                    ðŸ“„ Ansehen
                                </a>
                            {% else %}
                                <span class="text-muted">Kein Bild</span>
                            {% endif %}
                        </td>
                        <td>
                            {{ vehicle_document.vehicleDocadd
                                ? vehicle_document.vehicleDocadd|date('Y-m-d H:i')
                                : '' }}
                        </td>
                        <td>
                            <a href="{{ path('app_vehicle_document_show', {'id': vehicle_document.id}) }}"
                               class="btn btn-sm btn-outline-primary">Details</a>
                            <a href="{{ path('app_vehicle_document_edit', {'id': vehicle_document.id}) }}"
                               class="btn btn-sm btn-outline-warning ms-1">Bearbeiten</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">Keine Dokumente gefunden</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {# Falls Pagination kommt, hier einfÃ¼gen:
        {% include 'vehicle_document/_pagination.html.twig' %}
        #}
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
    // Minimal-AJAX-Search, falls du spÃ¤ter was nachziehen willst.
    let searchTimeout = null;
    const searchInput = document.getElementById('searchInput');
    const form = searchInput.closest('form');
    const tableAndPagination = document.getElementById('tableAndPagination');

    function fetchResults(query, page = 1) {
        fetch("{{ path('app_vehicle_document_ajax_list') }}?search=" + encodeURIComponent(query) + "&page=" + page, {
            headers: {'X-Requested-With': 'XMLHttpRequest'}
        })
        .then(res => res.json())
        .then(data => {
            tableAndPagination.innerHTML = data.table + (data.pagination ?? '');
        });
    }

    searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            fetchResults(this.value);
        }, 300);
    });

    form.addEventListener('submit', function(e) {
        // Wenn du klassisch submitten willst: auskommentieren
        // e.preventDefault();
        // fetchResults(searchInput.value);
    });
});
</script>
{% endblock %}
