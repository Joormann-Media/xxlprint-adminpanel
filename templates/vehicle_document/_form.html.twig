{# templates/vehicle_document/_form.html.twig #}
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="bi bi-file-earmark-text"></i> Fahrzeugdokument erfassen / bearbeiten
        </h5>
    </div>
    <div class="card-body">
        {{ form_start(form, {'attr': {'autocomplete': 'off', 'enctype': 'multipart/form-data'}}) }}
        <div class="row g-3">

            <div class="col-md-6">
                {{ form_label(form.vehicleDoctype) }}
                {{ form_widget(form.vehicleDoctype, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.vehicleDoctype) }}
            </div>

            <div class="col-md-6">
                {{ form_label(form.vehicle) }}
                {{ form_widget(form.vehicle, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.vehicle) }}
            </div>

            <div class="col-md-6">
                {{ form_label(form.vehicleDocuser) }}
                {{ form_widget(form.vehicleDocuser, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.vehicleDocuser) }}
            </div>

            <div class="col-md-6">
                {{ form_label(form.vehicleDocadd) }}
                {{ form_widget(form.vehicleDocadd, {'attr': {'class': 'form-control', 'readonly': true, 'tabindex': '-1', 'style': 'background:#f6f6fa;'}}) }}
                {{ form_errors(form.vehicleDocadd) }}
            </div>

            <div class="col-md-12">
                {{ form_label(form.vehicleDocimage) }}
                <div class="input-group">
                    {{ form_widget(form.vehicleDocimage, {'attr': {'class': 'form-control'}}) }}
                    <span class="input-group-text"><i class="bi bi-paperclip"></i></span>
                </div>
                <div class="form-text">Erlaubte Formate: PDF, JPG, PNG, GIF (max. 8 MB)</div>
                {{ form_errors(form.vehicleDocimage) }}
            </div>

        </div>

        <div class="text-end mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Speichern
            </button>
            <a href="{{ path('app_vehicle_document_index') }}" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Zurück zur Übersicht
            </a>
        </div>
        {{ form_end(form) }}
    </div>
</div>
