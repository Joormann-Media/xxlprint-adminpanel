{% extends 'base.html.twig' %}


{% block body %}
    <h1>ShortcodeButton index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tag</th>
                <th>Route</th>
                <th>IconPath</th>
                <th>ðŸ–¼ Icon</th>
                <th>Label</th>
                <th>Style</th>
                <th>ParamList</th>
                <th>IsActive</th>
                <th>SortOrder</th>
                <th>CreatedBy</th>
                <th>CreatedAt</th>
                <th>UpdatedBy</th>
                <th>UpdatedAt</th>
                <th>actions</th>
                <th>Preview</th>
            </tr>
        </thead>
        <tbody>
        {% for shortcode_button in shortcode_buttons %}
            <tr>
                <td>{{ shortcode_button.id }}</td>
                <td>{{ shortcode_button.tag }}</td>
                <td>{{ shortcode_button.route }}</td>
                <td>{{ shortcode_button.iconPath }}</td>
                <td>
                    {% if shortcode_button.iconPath %}

                    <img src="{{ asset(shortcode_button.iconPath) }}"

                             alt="Icon"
                             style="height: 24px;"
                             onerror="this.onerror=null;this.src='/gfx/shortcode/no-image-14596.png';">
                    {% else %}
                        <span class="text-muted">â€”</span>
                    {% endif %}
                </td>
                <td>{{ shortcode_button.label }}</td>
                <td>{{ shortcode_button.style }}</td>
                <td>{{ shortcode_button.paramList }}</td>
                <td>{{ shortcode_button.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ shortcode_button.sortOrder }}</td>
                <td>{{ shortcode_button.createdBy }}</td>
                <td>{{ shortcode_button.createdAt ? shortcode_button.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ shortcode_button.updatedBy }}</td>
                <td>{{ shortcode_button.updatedAt ? shortcode_button.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_shortcode_button_show', {'id': shortcode_button.id}) }}">show</a>
                    <a href="{{ path('app_shortcode_button_edit', {'id': shortcode_button.id}) }}">edit</a>
                </td>
                <td>
                    {% set shortcodeParams = 'tag="' ~ shortcode_button.tag ~ '"' %}
                    
                    {# Beispiel: Wenn du eine ID Ã¼bergeben willst (z.â€¯B. fÃ¼r Modal-Ziel) #}
                    {% if shortcode_button.id %}
                        {% set shortcodeParams = shortcodeParams ~ ' id=' ~ shortcode_button.id %}
                    {% endif %}
                
                    {# Modal automatisch aktivieren, wenn du willst #}
                    {% set shortcodeParams = shortcodeParams ~ ' modal=true' %}
                
                    {% set twigCode = "{{ '[[shortcode_button " ~ shortcodeParams ~ "]]' | shortcode | raw }}" %}
                
                    <pre><code>{{ twigCode }}</code></pre>
                    <button class="btn btn-sm btn-outline-primary"
                            onclick="navigator.clipboard.writeText(`{{ twigCode }}`)">
                        ðŸ“‹ Kopieren
                    </button>
                </td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_shortcode_button_new') }}">Create new</a>
    {{ '[[shortcode_button tag="NewEntry"]]' | shortcode | raw }}
    

{% endblock %}
