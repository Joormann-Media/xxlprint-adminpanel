{% extends 'base.html.twig' %}

{% block title %}PasteSystem Index{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="bi bi-clipboard-data"></i> Pastes</h1>
        <a href="{{ path('app_paste_system_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>
    {% if paste_systems|length > 0 %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
            {% for paste_system in paste_systems %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-2">
                                <i class="bi bi-hash"></i> {{ paste_system.slug }}
                            </h5>
                            <p class="card-text text-muted small mb-2">
                                <strong>Created:</strong>
                                {{ paste_system.createdAt ? paste_system.createdAt|date('Y-m-d H:i') : '—' }}
                            </p>
                            <p class="card-text small mb-2">
                                <strong>Content:</strong><br>
                                <span class="text-break">{{ paste_system.content|u.truncate(100, ' …', false) }}</span>
                            </p>
                            <p class="card-text small mb-2">
                                <strong>EditSecret:</strong><br>
                                <span class="text-break">{{ paste_system.editSecret|slice(0,8) ~ '…' }}</span>
                            </p>
                            <div class="mt-auto d-flex gap-2 justify-content-end">
                                <a href="{{ path('app_paste_system_show', {'id': paste_system.id}) }}" class="btn btn-outline-primary btn-sm" title="Show">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('app_paste_system_edit', {'id': paste_system.id}) }}" class="btn btn-outline-secondary btn-sm" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info text-center">
            <i class="bi bi-clipboard-x"></i> No pastes found. Go write your first pirate note!
        </div>
    {% endif %}
</div>
{% endblock %}
