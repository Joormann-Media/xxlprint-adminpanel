{% extends 'base.html.twig' %}

{% block title %}Create Paste{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">
                        <i class="bi bi-clipboard-plus me-2"></i>
                        Create New Paste
                    </h2>
                </div>
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_label(form.slug) }}
                        {{ form_widget(form.slug, {'attr': {'class': 'form-control'}}) }}
                        {{ form_help(form.slug) }}
                        {{ form_errors(form.slug) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.createdAt) }}
                        {{ form_widget(form.createdAt, {'attr': {'class': 'form-control'}}) }}
                        {{ form_help(form.createdAt) }}
                        {{ form_errors(form.createdAt) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.editSecret) }}
                        {{ form_widget(form.editSecret, {'attr': {'class': 'form-control'}}) }}
                        {{ form_help(form.editSecret) }}
                        {{ form_errors(form.editSecret) }}
                    </div>
                                        <div class="mb-3">
                        {{ form_label(form.content) }}
                        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 10}}) }}
                        {{ form_help(form.content) }}
                        {{ form_errors(form.content) }}
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between bg-light">
                    <a href="{{ path('app_paste_system_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to list
                    </a>
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-save"></i> Create Paste
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
