{% extends 'base.html.twig' %}

{% block title %}PasteSystem Show{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            <i class="bi bi-clipboard-data"></i> Paste Details
        </h1>
        <a href="{{ path('app_paste_system_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to list
        </a>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card shadow-lg mb-4">
                <div class="card-body">
                    <h2 class="card-title mb-2">
                        <i class="bi bi-hash"></i> {{ paste_system.slug }}
                    </h2>
                    <ul class="list-group list-group-flush mb-3 small">
                        <li class="list-group-item px-0"><strong>ID:</strong> {{ paste_system.id }}</li>
                        <li class="list-group-item px-0"><strong>Created:</strong> {{ paste_system.createdAt ? paste_system.createdAt|date('Y-m-d H:i') : 'â€”' }}</li>
                        <li class="list-group-item px-0"><strong>EditSecret:</strong> <span class="text-break">{{ paste_system.editSecret }}</span></li>
                    </ul>
                </div>
                <div class="card-footer d-flex gap-2 justify-content-end bg-light">
                    <a href="{{ path('app_paste_system_edit', {'id': paste_system.id}) }}" class="btn btn-outline-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    {{ include('paste_system/_delete_form.html.twig', { 'button_class': 'btn btn-outline-danger', 'icon': true }) }}
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-dark text-white d-flex align-items-center">
                    <i class="bi bi-code-slash me-2"></i> Paste
                </div>
                <div class="card-body">
                    <pre class="bg-light p-3 rounded" style="white-space: pre-wrap; font-family: monospace;">
{{ paste_system.content }}
                    </pre>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
