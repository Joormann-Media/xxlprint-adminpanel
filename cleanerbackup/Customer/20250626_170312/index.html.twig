{% extends 'base.html.twig' %}


{% block body %}
    <h1>CustomerUser index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Password</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer_user in customer_users %}
            <tr>
                <td>{{ customer_user.id }}</td>
                <td>{{ customer_user.email }}</td>
                <td>{{ customer_user.password }}</td>
                <td>{{ customer_user.roles ? customer_user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_customer_user_show', {'id': customer_user.id}) }}">show</a>
                    <a href="{{ path('app_customer_user_edit', {'id': customer_user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_customer_user_new') }}">Create new</a>
{% endblock %}
