{# templates/cheat_sheet/_form.html.twig #}
{{ form_start(form, {'attr': {'autocomplete': 'off'}}) }}
<div class="container-fluid p-0">
  <div class="card shadow border-0 rounded-4 mb-4">
    <div class="card-header bg-gradient bg-primary text-white fw-semibold fs-5">
      {% if form.vars.value.id %}
        <i class="bi bi-pencil me-2"></i> CheatSheet bearbeiten
      {% else %}
        <i class="bi bi-plus-circle me-2"></i> Neues CheatSheet anlegen
      {% endif %}
    </div>
    <div class="card-body">
      <div class="row g-4">
        <div class="col-md-6">
          <label class="form-label" for="category">Kategorie *</label>
          {{ form_widget(form.category, {'attr': {'class': 'form-control', 'placeholder': 'z.B. Bash, Git, SQL'}}) }}
          {{ form_errors(form.category) }}
        </div>
        <div class="col-md-6">
          <label class="form-label" for="name">Name *</label>
          {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Kurzer Name'}}) }}
          {{ form_errors(form.name) }}
        </div>
        <div class="col-12">
          <label class="form-label" for="description">Beschreibung</label>
          {{ form_widget(form.description, {'attr': {'class': 'form-control tinymce', 'rows': 2, 'placeholder': 'Was macht das CheatSheet?'}}) }}
          {{ form_errors(form.description) }}
        </div>
        <div class="col-12">
          <label class="form-label" for="content">Inhalt / Code</label>
          {{ form_widget(form.content, {'attr': {'class': 'form-control font-monospace', 'rows': 7, 'placeholder': 'Hier kommt der eigentliche Code, Befehle oder Tipps rein'}}) }}
          {{ form_errors(form.content) }}
        </div>
      </div>
    </div>
    <div class="card-footer bg-light border-0 py-3 text-end">
      <button class="btn btn-success px-4">
        <i class="bi bi-save me-1"></i> Speichern
      </button>
      <a href="{{ path('app_cheat_sheet_index') }}" class="btn btn-secondary ms-2 px-4">
        <i class="bi bi-arrow-left"></i> Zur√ºck
      </a>
    </div>
  </div>
</div>
{{ form_end(form) }}