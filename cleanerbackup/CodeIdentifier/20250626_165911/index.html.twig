{% extends 'base.html.twig' %}


{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">CodeIdentifier</h1>
        <a href="{{ path('app_code_identifier_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Neu anlegen
        </a>
    </div>

    {% if code_identifiers|length > 0 %}
        <form id="bulkDeleteForm" method="post" class="mb-3">
            <div class="d-flex align-items-center gap-2 mb-3">
                {% if is_granted('ROLE_DEVELOPER') %}
                    <input type="checkbox" id="selectAll" class="form-check-input" style="margin-top:2px;">
                    <label for="selectAll" class="form-check-label">Alle auswählen</label>
                {% endif %}
                {% if is_granted('ROLE_DEVELOPER') %}
                    <button type="button" class="btn btn-danger btn-sm ms-3" id="bulkDeleteBtn" disabled>
                        <i class="bi bi-trash3"></i> Ausgewählte löschen
                    </button>
                {% endif %}
            </div>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                {% for code_identifier in code_identifiers %}
                    <div class="col">
                        <div class="card h-100 shadow rounded-4 position-relative">
                            {# Checkbox als stylisher Circle Badge #}
                            <div class="position-absolute top-0 start-0 m-3" style="z-index:2;">
                                <label class="form-check-label d-flex align-items-center" style="cursor:pointer;">
                                    <input type="checkbox" name="ids[]" class="form-check-input bulk-check"
                                        value="{{ code_identifier.id }}">
                                </label>
                            </div>
                            <div class="card-body pt-4">
                                {# Schicke ID-Badge #}
                                <div class="mb-2">
                                    <span class="badge bg-secondary bg-opacity-25 text-secondary fw-bold px-3 py-2 rounded-pill" style="font-size: 1rem; letter-spacing: 1px;">
                                        #{{ code_identifier.id }}
                                    </span>
                                </div>
                                <h5 class="card-title mb-2">
                                    {{ code_identifier.identifier }}
                                </h5>
                                <h6 class="card-subtitle mb-2 text-muted">
                                    <i class="bi bi-geo-alt-fill"></i>
                                    {{ code_identifier.target }}
                                </h6>
                                <p class="card-text">{{ code_identifier.description|default('-') }}</p>
                            </div>
                            <div class="card-footer bg-transparent border-0 d-flex justify-content-end gap-2">
                                <a href="{{ path('app_code_identifier_show', {'id': code_identifier.id}) }}"
                                   class="btn btn-outline-secondary btn-sm" title="Anzeigen">
                                    <i class="bi bi-eye"></i> Show
                                </a>
                                <a href="{{ path('app_code_identifier_edit', {'id': code_identifier.id}) }}"
                                   class="btn btn-outline-primary btn-sm" title="Bearbeiten">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                {% if is_granted('ROLE_DEVELOPER') %}
                                    <form method="post" action="{{ path('app_code_identifier_delete', {'id': code_identifier.id}) }}"
                                          class="d-inline delete-form"
                                          onsubmit="return confirm('Wirklich löschen?')">
                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('delete' ~ code_identifier.id) }}">
                                        <button class="btn btn-outline-danger btn-sm" title="Löschen">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </form>
    {% else %}
        <div class="alert alert-warning text-center mt-5 rounded-4">
            <i class="bi bi-exclamation-triangle"></i>
            Keine CodeIdentifier gefunden.
        </div>
    {% endif %}
</div>


{# --- Bulk Delete Script --- #}
{% block javascripts %}
    {{ parent() }}
    <script>
    (function() {
        // Hier alles rein!
        const selectAll = document.getElementById('selectAll');
        const checkboxes = document.querySelectorAll('.bulk-check');
        const bulkDeleteBtn = document.getElementById('bulkDeleteBtn');

        function updateBulkBtn() {
            const checkedCount = document.querySelectorAll('.bulk-check:checked').length;
            bulkDeleteBtn.disabled = checkedCount === 0;
        }

        {% if is_granted('ROLE_DEVELOPER') %}
        selectAll?.addEventListener('change', function() {
            checkboxes.forEach(chk => chk.checked = selectAll.checked);
            updateBulkBtn();
        });
        {% endif %}

        checkboxes.forEach(chk => {
            chk.addEventListener('change', function() {
                updateBulkBtn();
                if (!chk.checked && selectAll.checked) {
                    selectAll.checked = false;
                }
            });
        });

        {% if is_granted('ROLE_DEVELOPER') %}
        bulkDeleteBtn?.addEventListener('click', async function(e) {
            e.preventDefault();
            const selected = Array.from(document.querySelectorAll('.bulk-check:checked'))
                .map(chk => chk.value);
            if (selected.length === 0) return;

            if (!confirm('Willst du wirklich ' + selected.length + ' CodeIdentifier löschen?')) return;

            // Fetch POST zur Bulk-Delete-Route (JSON!)
            const resp = await fetch('{{ path('app_code_identifier_bulk_delete') }}', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ ids: selected })
            });

            if (resp.ok) {
                location.reload();
            } else {
                alert('Fehler beim Löschen!');
            }
        });
        {% endif %}
    })();
    </script>
{% endblock %}

{% endblock %}
