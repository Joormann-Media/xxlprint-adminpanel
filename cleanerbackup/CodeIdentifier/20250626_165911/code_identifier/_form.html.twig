{% extends 'base.html.twig' %}

{% block title %}
    {{ form.vars.value.id is not null ? 'CodeIdentifier bearbeiten' : 'CodeIdentifier anlegen' }}
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h4 class="mb-0">
                        {{ form.vars.value.id is not null ? 'Bearbeiten' : 'Neu anlegen' }}
                        <span class="text-white-50 small">CodeIdentifier</span>
                    </h4>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="mb-3">
                            {{ form_label(form.identifier, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.identifier, {
                                'attr': {
                                    'class': 'form-control' ~ (form_errors(form.identifier) ? ' is-invalid' : ''),
                                    'placeholder': 'Identifier, z.B. PATCH-START'
                                }
                            }) }}
                            {{ form_errors(form.identifier) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.target, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.target, {
                                'attr': {
                                    'class': 'form-control' ~ (form_errors(form.target) ? ' is-invalid' : ''),
                                    'placeholder': '/src/Controller/FooController.php'
                                }
                            }) }}
                            {{ form_errors(form.target) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {
                                'attr': {
                                    'class': 'form-control' ~ (form_errors(form.description) ? ' is-invalid' : ''),
                                    'rows': 3,
                                    'placeholder': 'Kurze Beschreibung'
                                }
                            }) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_code_identifier_index') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Zur√ºck
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Speichern
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
