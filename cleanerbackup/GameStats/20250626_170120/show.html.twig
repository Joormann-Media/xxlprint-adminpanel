{% extends 'base.html.twig' %}

{% block title %}GameStats{% endblock %}

{% block body %}
    <h1>GameStats</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game_stat.id }}</td>
            </tr>
            <tr>
                <th>StatTimestamp</th>
                <td>{{ game_stat.statTimestamp ? game_stat.statTimestamp|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ProjectName</th>
                <td>{{ game_stat.projectName }}</td>
            </tr>
            <tr>
                <th>Folder</th>
                <td>{{ game_stat.folder }}</td>
            </tr>
            <tr>
                <th>Files</th>
                <td>{{ game_stat.files }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>{{ game_stat.images }}</td>
            </tr>
            <tr>
                <th>Archives</th>
                <td>{{ game_stat.archives }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_game_stats_index') }}">back to list</a>

    <a href="{{ path('app_game_stats_edit', {'id': game_stat.id}) }}">edit</a>

    {{ include('game_stats/_delete_form.html.twig') }}
{% endblock %}
