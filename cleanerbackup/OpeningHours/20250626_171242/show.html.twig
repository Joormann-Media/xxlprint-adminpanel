{% extends 'base.html.twig' %}

{% block title %}DownloadToken{% endblock %}

{% block body %}
    <h1>DownloadToken</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ download_token.id }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ download_token.token }}</td>
            </tr>
            <tr>
                <th>ExpiresAt</th>
                <td>{{ download_token.expiresAt ? download_token.expiresAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Used</th>
                <td>{{ download_token.used ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>UsedAt</th>
                <td>{{ download_token.usedAt }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ download_token.ip }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_download_token_index') }}">back to list</a>

    <a href="{{ path('app_download_token_edit', {'id': download_token.id}) }}">edit</a>

    {{ include('download_token/_delete_form.html.twig') }}
{% endblock %}
