{% extends 'base.html.twig' %}


{% block body %}
    <h1>License</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ license.id }}</td>
            </tr>
            <tr>
                <th>ProductName</th>
                <td>{{ license.productName }}</td>
            </tr>
            <tr>
                <th>LicenseKey</th>
                <td>{{ license.licenseKey }}</td>
            </tr>
            <tr>
                <th>Version</th>
                <td>{{ license.version }}</td>
            </tr>
            <tr>
                <th>ValidUntil</th>
                <td>{{ license.validUntil ? license.validUntil|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>MaxActivations</th>
                <td>{{ license.maxActivations }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ license.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_license_index') }}">back to list</a>

    <a href="{{ path('app_license_edit', {'id': license.id}) }}">edit</a>

    {{ include('license/_delete_form.html.twig') }}
{% endblock %}
