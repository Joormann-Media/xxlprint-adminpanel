{{ form_start(form, {'attr': {'autocomplete': 'off'}}) }}

<div class="container-fluid p-0">
  <div class="card shadow border-0 rounded-4 mb-4">
    <div class="card-header bg-primary bg-gradient text-white fw-bold fs-5">
      <i class="bi bi-lightbulb me-2"></i>
      {% if form.vars.value.id %}
        Idee bearbeiten
      {% else %}
        Neue Idee eintragen
      {% endif %}
    </div>
    <div class="card-body">
      <div class="row g-4">
        <div class="col-md-8">
          <label class="form-label">Titel *</label>
          {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Kurz und knackig'}}) }}
          {{ form_errors(form.title) }}
        </div>
        <div class="col-md-4">
          <label class="form-label">Typ</label>
          {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
          {{ form_errors(form.type) }}
        </div>
        <div class="col-md-12">
          <label class="form-label">Inhalt</label>
          {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Beschreibung, Idee, Notiz ...'}}) }}
          {{ form_errors(form.content) }}
        </div>
        <div class="col-md-6 col-lg-4">
          <label class="form-label">Status</label>
          {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
          {{ form_errors(form.status) }}
        </div>
        <div class="col-md-6 col-lg-4">
          <label class="form-label">Tags</label>
          {{ form_widget(form.tags, {'attr': {'class': 'form-control', 'placeholder': 'z.B. ai, fun, todo'}}) }}
          {{ form_errors(form.tags) }}
        </div>
        <div class="col-md-6 col-lg-4">
          <label class="form-label">Angelegt am</label>
          {{ form_widget(form.createdAt, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.createdAt) }}
        </div>
        <div class="col-md-6 col-lg-4">
          <label class="form-label">Datei/Anhang</label>
          {{ form_widget(form.file, {'attr': {'class': 'form-control', 'placeholder': 'Dateipfad oder URL'}}) }}
          {{ form_errors(form.file) }}
        </div>
        <div class="col-md-6 col-lg-4">
          <label class="form-label">Quelle</label>
          {{ form_widget(form.source, {'attr': {'class': 'form-control', 'placeholder': 'z.B. app, api, admin'}}) }}
          {{ form_errors(form.source) }}
        </div>
        <div class="col-md-6 col-lg-4">
          <label class="form-label">User</label>
          {{ form_widget(form.user, {'attr': {'class': 'form-select'}}) }}
          {{ form_errors(form.user) }}
        </div>
      </div>
    </div>
    <div class="card-footer bg-light border-0 py-3 text-end">
      <button class="btn btn-success px-4">
        <i class="bi bi-save me-1"></i> Speichern
      </button>
      <a href="{{ path('app_idea_pool_index') }}" class="btn btn-secondary ms-2 px-4">
        <i class="bi bi-arrow-left"></i> Zur√ºck
      </a>
    </div>
  </div>
</div>
{{ form_end(form) }}
