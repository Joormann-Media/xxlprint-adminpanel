{% extends 'base.html.twig' %}

{% block title %}Ideenpool{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h2 class="mb-0"><i class="bi bi-lightbulb me-2"></i> Ideenpool</h2>
        <a href="{{ path('app_idea_pool_new') }}" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle"></i> Neue Idee
        </a>
    </div>
    {% if idea_pools|length == 0 %}
        <div class="alert alert-warning">Noch keine Ideen gespeichert.</div>
    {% else %}
        <div class="row g-4">
            {% for idea in idea_pools %}
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card shadow h-100 border-0 position-relative">
                        <div class="card-header bg-primary bg-gradient text-white py-2 d-flex align-items-center gap-2">
                            <span class="badge bg-light text-primary fw-bold">{{ idea.type|upper }}</span>
                            <span class="ms-auto small">#{{ idea.id }}</span>
                        </div>
                        <div class="card-body pb-2">
                            <h5 class="card-title mb-1 fw-semibold text-truncate">{{ idea.title }}</h5>
                            <div class="mb-2 small text-muted" style="min-height:2em">
                                {% if idea.tags %}<i class="bi bi-tags"></i> {{ idea.tags }}{% endif %}
                            </div>
                            <div class="mb-2" style="min-height:2.5em;">
                                <span class="text-dark small">{{ idea.content|striptags|u.truncate(80, '…') }}</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <span class="badge bg-{{ idea.status == 'offen' ? 'warning' : (idea.status == 'erledigt' ? 'success' : 'secondary') }} text-dark">
                                    {{ idea.status|capitalize }}
                                </span>
                                <span class="small text-muted">{{ idea.createdAt ? idea.createdAt|date('d.m.Y H:i') : '–' }}</span>
                            </div>
                        </div>
                        <div class="card-footer bg-light py-2 d-flex justify-content-end gap-2">
                            <a href="{{ path('app_idea_pool_show', {'id': idea.id}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="{{ path('app_idea_pool_edit', {'id': idea.id}) }}" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                        {% if idea.file %}
                            <span class="position-absolute top-0 end-0 m-3 badge rounded-pill bg-info shadow"><i class="bi bi-paperclip"></i></span>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
