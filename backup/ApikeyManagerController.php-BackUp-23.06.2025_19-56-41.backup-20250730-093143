<?php

namespace App\Controller;

use App\Entity\ApikeyManager;
use App\Form\ApikeyManagerForm;
use App\Repository\ApikeyManagerRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/apikey/manager')]
final class ApikeyManagerController extends AbstractController
{
    #[Route(name: 'app_apikey_manager_index', methods: ['GET'])]
    public function index(ApikeyManagerRepository $apikeyManagerRepository): Response
    {
        return $this->render('apikey_manager/index.html.twig', [
            'apikey_managers' => $apikeyManagerRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_apikey_manager_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $apikeyManager = new ApikeyManager();
        $form = $this->createForm(ApikeyManagerForm::class, $apikeyManager);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($apikeyManager);
            $entityManager->flush();

            return $this->redirectToRoute('app_apikey_manager_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('apikey_manager/new.html.twig', [
            'apikey_manager' => $apikeyManager,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_apikey_manager_show', methods: ['GET'])]
    public function show(ApikeyManager $apikeyManager): Response
    {
        return $this->render('apikey_manager/show.html.twig', [
            'apikey_manager' => $apikeyManager,
        ]);
    }

    #[Route('/{id}/edit', name: 'app_apikey_manager_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, ApikeyManager $apikeyManager, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(ApikeyManagerForm::class, $apikeyManager);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_apikey_manager_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('apikey_manager/edit.html.twig', [
            'apikey_manager' => $apikeyManager,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_apikey_manager_delete', methods: ['POST'])]
    public function delete(Request $request, ApikeyManager $apikeyManager, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$apikeyManager->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($apikeyManager);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_apikey_manager_index', [], Response::HTTP_SEE_OTHER);
    }
}
