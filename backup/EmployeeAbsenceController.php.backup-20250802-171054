<?php

namespace App\Controller;

use App\Entity\EmployeeAbsence;
use App\Form\EmployeeAbsenceType;
use App\Repository\EmployeeAbsenceRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/employee/absence')]
final class EmployeeAbsenceController extends AbstractController
{
    #[Route(name: 'app_employee_absence_index', methods: ['GET'])]
    public function index(EmployeeAbsenceRepository $employeeAbsenceRepository): Response
    {
        return $this->render('employee_absence/index.html.twig', [
            'employee_absences' => $employeeAbsenceRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_employee_absence_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $employeeAbsence = new EmployeeAbsence();
        $form = $this->createForm(EmployeeAbsenceType::class, $employeeAbsence);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($employeeAbsence);
            $entityManager->flush();

            return $this->redirectToRoute('app_employee_absence_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('employee_absence/new.html.twig', [
            'employee_absence' => $employeeAbsence,
            'form' => $form,
        ]);
    }

    #[Route('/{id<\d+>}', name: 'app_employee_absence_show', methods: ['GET'])]
    public function show(EmployeeAbsence $employeeAbsence): Response
    {
        return $this->render('employee_absence/show.html.twig', [
            'employee_absence' => $employeeAbsence,
        ]);
    }

    #[Route('/{id<\d+>}/edit', name: 'app_employee_absence_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, EmployeeAbsence $employeeAbsence, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(EmployeeAbsenceType::class, $employeeAbsence);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_employee_absence_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('employee_absence/edit.html.twig', [
            'employee_absence' => $employeeAbsence,
            'form' => $form,
        ]);
    }

    #[Route('/{id<\d+>}', name: 'app_employee_absence_delete', methods: ['POST'])]
    public function delete(Request $request, EmployeeAbsence $employeeAbsence, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$employeeAbsence->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($employeeAbsence);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_employee_absence_index', [], Response::HTTP_SEE_OTHER);
    }
}
