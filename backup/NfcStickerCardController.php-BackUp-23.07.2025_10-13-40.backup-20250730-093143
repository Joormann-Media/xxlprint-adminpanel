<?php

namespace App\Controller;

use App\Entity\NfcStickerCard;
use App\Form\NfcStickerCardType;
use App\Repository\NfcStickerCardRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/nfc/sticker/card')]
final class NfcStickerCardController extends AbstractController
{
    #[Route(name: 'app_nfc_sticker_card_index', methods: ['GET'])]
    public function index(NfcStickerCardRepository $nfcStickerCardRepository): Response
    {
        return $this->render('nfc_sticker_card/index.html.twig', [
            'nfc_sticker_cards' => $nfcStickerCardRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_nfc_sticker_card_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $nfcStickerCard = new NfcStickerCard();
        $form = $this->createForm(NfcStickerCardType::class, $nfcStickerCard);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($nfcStickerCard);
            $entityManager->flush();

            return $this->redirectToRoute('app_nfc_sticker_card_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('nfc_sticker_card/new.html.twig', [
            'nfc_sticker_card' => $nfcStickerCard,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_nfc_sticker_card_show', methods: ['GET'])]
    public function show(NfcStickerCard $nfcStickerCard): Response
    {
        return $this->render('nfc_sticker_card/show.html.twig', [
            'nfc_sticker_card' => $nfcStickerCard,
        ]);
    }

    #[Route('/{id}/edit', name: 'app_nfc_sticker_card_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, NfcStickerCard $nfcStickerCard, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(NfcStickerCardType::class, $nfcStickerCard);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_nfc_sticker_card_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('nfc_sticker_card/edit.html.twig', [
            'nfc_sticker_card' => $nfcStickerCard,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_nfc_sticker_card_delete', methods: ['POST'])]
    public function delete(Request $request, NfcStickerCard $nfcStickerCard, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$nfcStickerCard->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($nfcStickerCard);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_nfc_sticker_card_index', [], Response::HTTP_SEE_OTHER);
    }
}
