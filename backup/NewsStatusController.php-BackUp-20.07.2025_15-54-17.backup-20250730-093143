<?php

namespace App\Controller;

use App\Entity\NewsStatus;
use App\Form\NewsStatusType;
use App\Repository\NewsStatusRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/news/status')]
final class NewsStatusController extends AbstractController
{
    #[Route(name: 'app_news_status_index', methods: ['GET'])]
    public function index(NewsStatusRepository $newsStatusRepository): Response
    {
        return $this->render('news_status/index.html.twig', [
            'news_statuses' => $newsStatusRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_news_status_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $newsStatus = new NewsStatus();
        $form = $this->createForm(NewsStatusType::class, $newsStatus);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($newsStatus);
            $entityManager->flush();

            return $this->redirectToRoute('app_news_status_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('news_status/new.html.twig', [
            'news_status' => $newsStatus,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_news_status_show', methods: ['GET'])]
    public function show(NewsStatus $newsStatus): Response
    {
        return $this->render('news_status/show.html.twig', [
            'news_status' => $newsStatus,
        ]);
    }

    #[Route('/{id}/edit', name: 'app_news_status_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, NewsStatus $newsStatus, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(NewsStatusType::class, $newsStatus);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_news_status_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('news_status/edit.html.twig', [
            'news_status' => $newsStatus,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_news_status_delete', methods: ['POST'])]
    public function delete(Request $request, NewsStatus $newsStatus, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$newsStatus->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($newsStatus);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_news_status_index', [], Response::HTTP_SEE_OTHER);
    }
}
