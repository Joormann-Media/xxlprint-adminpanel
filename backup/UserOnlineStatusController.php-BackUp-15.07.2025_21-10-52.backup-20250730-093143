<?php

namespace App\Controller;

use App\Entity\UserOnlineStatus;
use App\Form\UserOnlineStatusType;
use App\Repository\UserOnlineStatusRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/user/online/status')]
final class UserOnlineStatusController extends AbstractController
{
    #[Route(name: 'app_user_online_status_index', methods: ['GET'])]
    public function index(UserOnlineStatusRepository $userOnlineStatusRepository): Response
    {
        return $this->render('user_online_status/index.html.twig', [
            'user_online_statuses' => $userOnlineStatusRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_user_online_status_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $userOnlineStatus = new UserOnlineStatus();
        $form = $this->createForm(UserOnlineStatusType::class, $userOnlineStatus);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($userOnlineStatus);
            $entityManager->flush();

            return $this->redirectToRoute('app_user_online_status_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('user_online_status/new.html.twig', [
            'user_online_status' => $userOnlineStatus,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_user_online_status_show', methods: ['GET'])]
    public function show(UserOnlineStatus $userOnlineStatus): Response
    {
        return $this->render('user_online_status/show.html.twig', [
            'user_online_status' => $userOnlineStatus,
        ]);
    }

    #[Route('/{id}/edit', name: 'app_user_online_status_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, UserOnlineStatus $userOnlineStatus, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(UserOnlineStatusType::class, $userOnlineStatus);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_user_online_status_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('user_online_status/edit.html.twig', [
            'user_online_status' => $userOnlineStatus,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_user_online_status_delete', methods: ['POST'])]
    public function delete(Request $request, UserOnlineStatus $userOnlineStatus, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$userOnlineStatus->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($userOnlineStatus);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_user_online_status_index', [], Response::HTTP_SEE_OTHER);
    }
}
