<?php

namespace App\Controller;

use App\Entity\HouseNumber;
use App\Form\HouseNumberType;
use App\Repository\HouseNumberRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/house/number')]
final class HouseNumberController extends AbstractController
{
    #[Route(name: 'app_house_number_index', methods: ['GET'])]
    public function index(HouseNumberRepository $houseNumberRepository): Response
    {
        return $this->render('house_number/index.html.twig', [
            'house_numbers' => $houseNumberRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_house_number_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $houseNumber = new HouseNumber();
        $form = $this->createForm(HouseNumberType::class, $houseNumber);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($houseNumber);
            $entityManager->flush();

            return $this->redirectToRoute('app_house_number_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('house_number/new.html.twig', [
            'house_number' => $houseNumber,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_house_number_show', methods: ['GET'])]
    public function show(HouseNumber $houseNumber): Response
    {
        return $this->render('house_number/show.html.twig', [
            'house_number' => $houseNumber,
        ]);
    }

    #[Route('/{id}/edit', name: 'app_house_number_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, HouseNumber $houseNumber, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(HouseNumberType::class, $houseNumber);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_house_number_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('house_number/edit.html.twig', [
            'house_number' => $houseNumber,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_house_number_delete', methods: ['POST'])]
    public function delete(Request $request, HouseNumber $houseNumber, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$houseNumber->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($houseNumber);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_house_number_index', [], Response::HTTP_SEE_OTHER);
    }
}
