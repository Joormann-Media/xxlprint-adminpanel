<?php

namespace App\Controller;

use App\Entity\SchoolkidTrip;
use App\Form\SchoolkidTripType;
use App\Repository\SchoolkidTripRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/schoolkid/trip')]
final class SchoolkidTripController extends AbstractController
{
    #[Route(name: 'app_schoolkid_trip_index', methods: ['GET'])]
    public function index(SchoolkidTripRepository $schoolkidTripRepository): Response
    {
        return $this->render('schoolkid_trip/index.html.twig', [
            'schoolkid_trips' => $schoolkidTripRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_schoolkid_trip_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $schoolkidTrip = new SchoolkidTrip();
        $form = $this->createForm(SchoolkidTripType::class, $schoolkidTrip);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($schoolkidTrip);
            $entityManager->flush();

            return $this->redirectToRoute('app_schoolkid_trip_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('schoolkid_trip/new.html.twig', [
            'schoolkid_trip' => $schoolkidTrip,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_schoolkid_trip_show', methods: ['GET'])]
    public function show(SchoolkidTrip $schoolkidTrip): Response
    {
        return $this->render('schoolkid_trip/show.html.twig', [
            'schoolkid_trip' => $schoolkidTrip,
        ]);
    }

    #[Route('/{id}/edit', name: 'app_schoolkid_trip_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, SchoolkidTrip $schoolkidTrip, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(SchoolkidTripType::class, $schoolkidTrip);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_schoolkid_trip_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('schoolkid_trip/edit.html.twig', [
            'schoolkid_trip' => $schoolkidTrip,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_schoolkid_trip_delete', methods: ['POST'])]
    public function delete(Request $request, SchoolkidTrip $schoolkidTrip, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$schoolkidTrip->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($schoolkidTrip);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_schoolkid_trip_index', [], Response::HTTP_SEE_OTHER);
    }
}
