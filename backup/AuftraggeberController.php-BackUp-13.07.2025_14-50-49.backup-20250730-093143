<?php

namespace App\Controller;

use App\Entity\Auftraggeber;
use App\Form\AuftraggeberType;
use App\Repository\AuftraggeberRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/auftraggeber')]
final class AuftraggeberController extends AbstractController
{
    #[Route(name: 'app_auftraggeber_index', methods: ['GET'])]
    public function index(AuftraggeberRepository $auftraggeberRepository): Response
    {
        return $this->render('auftraggeber/index.html.twig', [
            'auftraggebers' => $auftraggeberRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_auftraggeber_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $auftraggeber = new Auftraggeber();
        $form = $this->createForm(AuftraggeberType::class, $auftraggeber);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($auftraggeber);
            $entityManager->flush();

            return $this->redirectToRoute('app_auftraggeber_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('auftraggeber/new.html.twig', [
            'auftraggeber' => $auftraggeber,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_auftraggeber_show', methods: ['GET'])]
    public function show(Auftraggeber $auftraggeber): Response
    {
        return $this->render('auftraggeber/show.html.twig', [
            'auftraggeber' => $auftraggeber,
        ]);
    }

    #[Route('/{id}/edit', name: 'app_auftraggeber_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, Auftraggeber $auftraggeber, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(AuftraggeberType::class, $auftraggeber);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_auftraggeber_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('auftraggeber/edit.html.twig', [
            'auftraggeber' => $auftraggeber,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_auftraggeber_delete', methods: ['POST'])]
    public function delete(Request $request, Auftraggeber $auftraggeber, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$auftraggeber->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($auftraggeber);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_auftraggeber_index', [], Response::HTTP_SEE_OTHER);
    }
}
