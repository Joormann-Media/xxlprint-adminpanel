<?php

namespace App\Controller;

use App\Entity\EmployeeDocument;
use App\Form\EmployeeDocumentType;
use App\Repository\EmployeeDocumentRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\File\Exception\FileException;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;
use Symfony\Component\String\Slugger\SluggerInterface;

#[Route('/employee/document')]
final class EmployeeDocumentController extends AbstractController
{
    #[Route(name: 'app_employee_document_index', methods: ['GET'])]
    public function index(EmployeeDocumentRepository $employeeDocumentRepository): Response
    {
        return $this->render('employee_document/index.html.twig', [
            'employee_documents' => $employeeDocumentRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_employee_document_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $em, SluggerInterface $slugger): Response
    {
        $employeeDocument = new EmployeeDocument();
        $form = $this->createForm(EmployeeDocumentType::class, $employeeDocument);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $upload = $form->get('upload')->getData();

            if ($upload) {
                $originalFilename = pathinfo($upload->getClientOriginalName(), PATHINFO_FILENAME);
                $safeFilename = $slugger->slug($originalFilename);
                $newFilename = $safeFilename.'-'.uniqid().'.'.$upload->guessExtension();

                try {
                    $upload->move(
                        $this->getParameter('employee_documents_dir'),
                        $newFilename
                    );
                    $employeeDocument->setFilename($newFilename);
                } catch (FileException $e) {
                    $this->addFlash('danger', 'Fehler beim Hochladen: '.$e->getMessage());
                }
            }

            $em->persist($employeeDocument);
            $em->flush();

            $this->addFlash('success', 'ðŸ“Ž Dokument erfolgreich gespeichert.');

            return $this->redirectToRoute('app_employee_document_index');
        }

        return $this->render('employee_document/new.html.twig', [
            'employee_document' => $employeeDocument,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_employee_document_show', methods: ['GET'])]
    public function show(EmployeeDocument $employeeDocument): Response
    {
        return $this->render('employee_document/show.html.twig', [
            'employee_document' => $employeeDocument,
        ]);
    }

    #[Route('/{id}/edit', name: 'app_employee_document_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, EmployeeDocument $employeeDocument, EntityManagerInterface $em, SluggerInterface $slugger): Response
    {
        $form = $this->createForm(EmployeeDocumentType::class, $employeeDocument);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $upload = $form->get('upload')->getData();

            if ($upload) {
                $originalFilename = pathinfo($upload->getClientOriginalName(), PATHINFO_FILENAME);
                $safeFilename = $slugger->slug($originalFilename);
                $newFilename = $safeFilename.'-'.uniqid().'.'.$upload->guessExtension();

                try {
                    $upload->move(
                        $this->getParameter('employee_documents_dir'),
                        $newFilename
                    );
                    $employeeDocument->setFilename($newFilename);
                } catch (FileException $e) {
                    $this->addFlash('danger', 'Fehler beim Hochladen: '.$e->getMessage());
                }
            }

            $em->flush();

            $this->addFlash('success', 'ðŸ“Ž Dokument erfolgreich aktualisiert.');

            return $this->redirectToRoute('app_employee_document_index');
        }

        return $this->render('employee_document/edit.html.twig', [
            'employee_document' => $employeeDocument,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_employee_document_delete', methods: ['POST'])]
    public function delete(Request $request, EmployeeDocument $employeeDocument, EntityManagerInterface $em): Response
    {
        if ($this->isCsrfTokenValid('delete' . $employeeDocument->getId(), $request->request->get('_token'))) {
            $em->remove($employeeDocument);
            $em->flush();
            $this->addFlash('info', 'ðŸ—‘ï¸ Dokument gelÃ¶scht.');
        }

        return $this->redirectToRoute('app_employee_document_index');
    }
}
