<?php

namespace App\Controller;

use App\Entity\ApiManager;
use App\Form\ApiManagerForm;
use App\Repository\ApiManagerRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/api/manager')]
final class ApiManagerController extends AbstractController
{
    #[Route(name: 'app_api_manager_index', methods: ['GET'])]
    public function index(ApiManagerRepository $apiManagerRepository): Response
    {
        return $this->render('api_manager/index.html.twig', [
            'api_managers' => $apiManagerRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_api_manager_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $apiManager = new ApiManager();
        $form = $this->createForm(ApiManagerForm::class, $apiManager);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($apiManager);
            $entityManager->flush();

            return $this->redirectToRoute('app_api_manager_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('api_manager/new.html.twig', [
            'api_manager' => $apiManager,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_api_manager_show', methods: ['GET'])]
    public function show(ApiManager $apiManager): Response
    {
        return $this->render('api_manager/show.html.twig', [
            'api_manager' => $apiManager,
        ]);
    }

    #[Route('/{id}/edit', name: 'app_api_manager_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, ApiManager $apiManager, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(ApiManagerForm::class, $apiManager);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_api_manager_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('api_manager/edit.html.twig', [
            'api_manager' => $apiManager,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_api_manager_delete', methods: ['POST'])]
    public function delete(Request $request, ApiManager $apiManager, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$apiManager->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($apiManager);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_api_manager_index', [], Response::HTTP_SEE_OTHER);
    }
}
