<?php

namespace App\Controller;

use App\Entity\ApiDocumentation;
use App\Form\ApiDocumentationForm;
use App\Repository\ApiDocumentationRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/api/documentation')]
final class ApiDocumentationController extends AbstractController
{
    #[Route(name: 'app_api_documentation_index', methods: ['GET'])]
    public function index(ApiDocumentationRepository $apiDocumentationRepository): Response
    {
        return $this->render('api_documentation/index.html.twig', [
            'api_documentations' => $apiDocumentationRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_api_documentation_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $apiDocumentation = new ApiDocumentation();
        $form = $this->createForm(ApiDocumentationForm::class, $apiDocumentation);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($apiDocumentation);
            $entityManager->flush();

            return $this->redirectToRoute('app_api_documentation_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('api_documentation/new.html.twig', [
            'api_documentation' => $apiDocumentation,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_api_documentation_show', methods: ['GET'])]
    public function show(ApiDocumentation $apiDocumentation): Response
    {
        return $this->render('api_documentation/show.html.twig', [
            'api_documentation' => $apiDocumentation,
        ]);
    }

    #[Route('/{id}/edit', name: 'app_api_documentation_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, ApiDocumentation $apiDocumentation, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(ApiDocumentationForm::class, $apiDocumentation);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_api_documentation_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('api_documentation/edit.html.twig', [
            'api_documentation' => $apiDocumentation,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_api_documentation_delete', methods: ['POST'])]
    public function delete(Request $request, ApiDocumentation $apiDocumentation, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$apiDocumentation->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($apiDocumentation);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_api_documentation_index', [], Response::HTTP_SEE_OTHER);
    }
}
