<?php

namespace App\Controller;

use App\Entity\VehicleInspectionInterval;
use App\Form\VehicleInspectionIntervalType;
use App\Repository\VehicleInspectionIntervalRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/vehicle/inspection/interval')]
final class VehicleInspectionIntervalController extends AbstractController
{
    #[Route(name: 'app_vehicle_inspection_interval_index', methods: ['GET'])]
    public function index(VehicleInspectionIntervalRepository $vehicleInspectionIntervalRepository): Response
    {
        return $this->render('vehicle_inspection_interval/index.html.twig', [
            'vehicle_inspection_intervals' => $vehicleInspectionIntervalRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_vehicle_inspection_interval_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $vehicleInspectionInterval = new VehicleInspectionInterval();
        $form = $this->createForm(VehicleInspectionIntervalType::class, $vehicleInspectionInterval);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($vehicleInspectionInterval);
            $entityManager->flush();

            return $this->redirectToRoute('app_vehicle_inspection_interval_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('vehicle_inspection_interval/new.html.twig', [
            'vehicle_inspection_interval' => $vehicleInspectionInterval,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_vehicle_inspection_interval_show', methods: ['GET'])]
    public function show(VehicleInspectionInterval $vehicleInspectionInterval): Response
    {
        return $this->render('vehicle_inspection_interval/show.html.twig', [
            'vehicle_inspection_interval' => $vehicleInspectionInterval,
        ]);
    }

    #[Route('/{id}/edit', name: 'app_vehicle_inspection_interval_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, VehicleInspectionInterval $vehicleInspectionInterval, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(VehicleInspectionIntervalType::class, $vehicleInspectionInterval);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_vehicle_inspection_interval_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('vehicle_inspection_interval/edit.html.twig', [
            'vehicle_inspection_interval' => $vehicleInspectionInterval,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_vehicle_inspection_interval_delete', methods: ['POST'])]
    public function delete(Request $request, VehicleInspectionInterval $vehicleInspectionInterval, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$vehicleInspectionInterval->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($vehicleInspectionInterval);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_vehicle_inspection_interval_index', [], Response::HTTP_SEE_OTHER);
    }
}
