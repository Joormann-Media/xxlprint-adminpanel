<?php

namespace App\Controller;

use App\Entity\SystemOwner;
use App\Form\SystemOwnerType;
use App\Repository\SystemOwnerRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/system/owner')]
final class SystemOwnerController extends AbstractController
{
    #[Route(name: 'app_system_owner_index', methods: ['GET'])]
    public function index(SystemOwnerRepository $systemOwnerRepository): Response
    {
        return $this->render('system_owner/index.html.twig', [
            'system_owners' => $systemOwnerRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_system_owner_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $systemOwner = new SystemOwner();
        $form = $this->createForm(SystemOwnerType::class, $systemOwner);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($systemOwner);
            $entityManager->flush();

            return $this->redirectToRoute('app_system_owner_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('system_owner/new.html.twig', [
            'system_owner' => $systemOwner,
            'form' => $form,
        ]);
    }

    #[Route('/{id<\d+>}', name: 'app_system_owner_show', methods: ['GET'])]
    public function show(SystemOwner $systemOwner): Response
    {
        return $this->render('system_owner/show.html.twig', [
            'system_owner' => $systemOwner,
        ]);
    }

    #[Route('/{id<\d+>}/edit', name: 'app_system_owner_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, SystemOwner $systemOwner, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(SystemOwnerType::class, $systemOwner);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_system_owner_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('system_owner/edit.html.twig', [
            'system_owner' => $systemOwner,
            'form' => $form,
        ]);
    }

    #[Route('/{id<\d+>}', name: 'app_system_owner_delete', methods: ['POST'])]
    public function delete(Request $request, SystemOwner $systemOwner, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$systemOwner->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($systemOwner);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_system_owner_index', [], Response::HTTP_SEE_OTHER);
    }
}
