<?php

namespace App\Controller;

use App\Entity\DriverLicense;
use App\Form\DriverLicenseType;
use App\Repository\DriverLicenseRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/driver/license')]
final class DriverLicenseController extends AbstractController
{
    #[Route(name: 'app_driver_license_index', methods: ['GET'])]
    public function index(DriverLicenseRepository $driverLicenseRepository): Response
    {
        return $this->render('driver_license/index.html.twig', [
            'driver_licenses' => $driverLicenseRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_driver_license_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $driverLicense = new DriverLicense();
        $form = $this->createForm(DriverLicenseType::class, $driverLicense);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($driverLicense);
            $entityManager->flush();

            return $this->redirectToRoute('app_driver_license_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('driver_license/new.html.twig', [
            'driver_license' => $driverLicense,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_driver_license_show', methods: ['GET'])]
    public function show(DriverLicense $driverLicense): Response
    {
        return $this->render('driver_license/show.html.twig', [
            'driver_license' => $driverLicense,
        ]);
    }

    #[Route('/{id}/edit', name: 'app_driver_license_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, DriverLicense $driverLicense, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(DriverLicenseType::class, $driverLicense);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_driver_license_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('driver_license/edit.html.twig', [
            'driver_license' => $driverLicense,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_driver_license_delete', methods: ['POST'])]
    public function delete(Request $request, DriverLicense $driverLicense, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$driverLicense->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($driverLicense);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_driver_license_index', [], Response::HTTP_SEE_OTHER);
    }
}
