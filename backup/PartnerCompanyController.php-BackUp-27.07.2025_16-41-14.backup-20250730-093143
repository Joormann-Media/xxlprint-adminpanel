<?php

namespace App\Controller;

use App\Entity\PartnerCompany;
use App\Form\PartnerCompanyType;
use App\Repository\PartnerCompanyRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/partner/company')]
final class PartnerCompanyController extends AbstractController
{
    #[Route(name: 'app_partner_company_index', methods: ['GET'])]
    public function index(PartnerCompanyRepository $partnerCompanyRepository): Response
    {
        return $this->render('partner_company/index.html.twig', [
            'partner_companies' => $partnerCompanyRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_partner_company_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $partnerCompany = new PartnerCompany();
        $form = $this->createForm(PartnerCompanyType::class, $partnerCompany);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($partnerCompany);
            $entityManager->flush();

            return $this->redirectToRoute('app_partner_company_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('partner_company/new.html.twig', [
            'partner_company' => $partnerCompany,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_partner_company_show', methods: ['GET'])]
    public function show(PartnerCompany $partnerCompany): Response
    {
        return $this->render('partner_company/show.html.twig', [
            'partner_company' => $partnerCompany,
        ]);
    }

    #[Route('/{id}/edit', name: 'app_partner_company_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, PartnerCompany $partnerCompany, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(PartnerCompanyType::class, $partnerCompany);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_partner_company_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('partner_company/edit.html.twig', [
            'partner_company' => $partnerCompany,
            'form' => $form,
        ]);
    }

    #[Route('/{id}', name: 'app_partner_company_delete', methods: ['POST'])]
    public function delete(Request $request, PartnerCompany $partnerCompany, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$partnerCompany->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($partnerCompany);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_partner_company_index', [], Response::HTTP_SEE_OTHER);
    }
}
