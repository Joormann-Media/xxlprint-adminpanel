<?php

namespace App\Controller;

use App\Entity\MessageStatus;
use App\Form\MessageStatusType;
use App\Repository\MessageStatusRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

#[Route('/message/status')]
final class MessageStatusController extends AbstractController
{
    #[Route(name: 'app_message_status_index', methods: ['GET'])]
    public function index(MessageStatusRepository $messageStatusRepository): Response
    {
        return $this->render('message_status/index.html.twig', [
            'message_statuses' => $messageStatusRepository->findAll(),
        ]);
    }

    #[Route('/new', name: 'app_message_status_new', methods: ['GET', 'POST'])]
    public function new(Request $request, EntityManagerInterface $entityManager): Response
    {
        $messageStatus = new MessageStatus();
        $form = $this->createForm(MessageStatusType::class, $messageStatus);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->persist($messageStatus);
            $entityManager->flush();

            return $this->redirectToRoute('app_message_status_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('message_status/new.html.twig', [
            'message_status' => $messageStatus,
            'form' => $form,
        ]);
    }

    #[Route('/{id<\d+>}', name: 'app_message_status_show', methods: ['GET'])]
    public function show(MessageStatus $messageStatus): Response
    {
        return $this->render('message_status/show.html.twig', [
            'message_status' => $messageStatus,
        ]);
    }

    #[Route('/{id<\d+>}/edit', name: 'app_message_status_edit', methods: ['GET', 'POST'])]
    public function edit(Request $request, MessageStatus $messageStatus, EntityManagerInterface $entityManager): Response
    {
        $form = $this->createForm(MessageStatusType::class, $messageStatus);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager->flush();

            return $this->redirectToRoute('app_message_status_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->render('message_status/edit.html.twig', [
            'message_status' => $messageStatus,
            'form' => $form,
        ]);
    }

    #[Route('/{id<\d+>}', name: 'app_message_status_delete', methods: ['POST'])]
    public function delete(Request $request, MessageStatus $messageStatus, EntityManagerInterface $entityManager): Response
    {
        if ($this->isCsrfTokenValid('delete'.$messageStatus->getId(), $request->getPayload()->getString('_token'))) {
            $entityManager->remove($messageStatus);
            $entityManager->flush();
        }

        return $this->redirectToRoute('app_message_status_index', [], Response::HTTP_SEE_OTHER);
    }
}
